<%- include('partials/header') %>
<%- include('partials/nav') %>

<div class="container admin-console">
  <section class="admin-console__hero">
    <div>
      <span class="admin-console__badge">Journal des actions</span>
      <h1>Console Administrateur</h1>
      <p>Surveillance des créations, modifications et suppressions en temps réel.</p>
    </div>
    <div class="admin-console__meta">
      <div>Connecté : <strong><%= user && user.email ? user.email : 'Admin' %></strong></div>
      <div><%= items.length %> lignes chargées</div>
    </div>
  </section>

  <section class="admin-console__filters">
    <form method="get" action="/admin" class="filters">
      <div>
        <label>Action</label>
        <select name="action">
          <option value="">Toutes</option>
          <% if (typeof actions !== 'undefined') { %>
            <% actions.forEach(function(a) { %>
              <option value="<%= a %>" <%= filters.action === a ? 'selected' : '' %>><%= a %></option>
            <% }); %>
          <% } %>
        </select>
      </div>
      <div>
        <label>Entité</label>
        <select name="entity">
          <option value="">Toutes</option>
          <% if (typeof entities !== 'undefined') { %>
            <% entities.forEach(function(e) { %>
              <option value="<%= e %>" <%= filters.entity === e ? 'selected' : '' %>><%= e %></option>
            <% }); %>
          <% } %>
        </select>
      </div>
      <div>
        <label>Acteur (email)</label>
        <input type="text" name="actor" value="<%= filters.actor %>" placeholder="email" />
      </div>
      <div>
        <label>Recherche libre</label>
        <input type="text" name="q" value="<%= filters.q %>" placeholder="id, ip, details" />
      </div>
      <div>
        <label>Du</label>
        <input type="date" name="from" value="<%= filters.from %>" />
      </div>
      <div>
        <label>Au</label>
        <input type="date" name="to" value="<%= filters.to %>" />
      </div>
      <div>
        <label>Limite</label>
        <input type="number" name="limit" min="50" max="1000" value="<%= filters.limit %>" />
      </div>
      <div class="filters__actions">
        <button class="btn" type="submit">Filtrer</button>
        <a class="btn ghost" href="/admin">Reset</a>
      </div>
    </form>
  </section>

  <section class="admin-console__table">
    <table>
      <thead>
        <tr>
          <th>Date</th>
          <th>Action</th>
          <th>Entité</th>
          <th>ID</th>
          <th>Acteur</th>
          <th>IP</th>
          <th>Détails</th>
        </tr>
      </thead>
      <tbody>
        <% if (!items || items.length === 0) { %>
          <tr>
            <td colspan="7" class="empty">Aucune action enregistrée.</td>
          </tr>
        <% } %>

        <% if (items && items.length > 0) { %>
          <% items.forEach(function(item) { %>
            <tr>
              <td><%= item.createdAt ? new Date(item.createdAt).toLocaleString('fr-FR') : '-' %></td>
              <td><span class="tag tag--<%= item.action %>"><%= item.action %></span></td>
              <td><%= item.entity %></td>
              <td><%= item.entityId || '-' %></td>
              <td><%= item.actorEmail || item.actorId || '-' %></td>
              <td><%= item.ip || '-' %></td>
              <td>
                <details>
                  <summary>Voir</summary>
                  <pre class="json"><code><%= JSON.stringify(item.changes || {}, null, 2) %></code></pre>
                </details>
              </td>
            </tr>
          <% }); %>
        <% } %>
      </tbody>
    </table>
  </section>
</div>

<style>
@import url("https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;600;700&display=swap");

.admin-console {
  font-family: "Space Grotesk", system-ui, sans-serif;
  margin-top: 32px;
  display: grid;
  gap: 22px;
  color: #e9eef3;
}

.admin-console__hero {
  display: flex;
  flex-wrap: wrap;
  gap: 16px;
  justify-content: space-between;
  padding: 24px;
  border-radius: 18px;
  background: linear-gradient(135deg, rgba(59, 130, 246, 0.1), rgba(15, 23, 42, 0.5));
  border: 1px solid rgba(59, 130, 246, 0.2);
}

.admin-console__badge {
  display: inline-flex;
  padding: 6px 12px;
  border-radius: 999px;
  background: rgba(59, 130, 246, 0.2);
  color: #93c5fd;
  font-size: 12px;
  letter-spacing: 0.1em;
  text-transform: uppercase;
  font-weight: 600;
}

.admin-console__hero h1 {
  margin: 10px 0 6px;
  font-size: 28px;
  color: #3b82f6;
}

.admin-console__hero p {
  margin: 0;
  color: rgba(229, 231, 235, 0.7);
  font-size: 14px;
}

.admin-console__meta {
  display: grid;
  gap: 6px;
  padding: 12px 16px;
  border-radius: 12px;
  background: rgba(15, 23, 42, 0.4);
  border: 1px solid rgba(59, 130, 246, 0.2);
  font-size: 13px;
}

.admin-console__filters {
  padding: 20px;
  border-radius: 16px;
  background: rgba(15, 23, 42, 0.45);
  border: 1px solid rgba(59, 130, 246, 0.15);
}

.filters {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
  gap: 14px;
}

.filters label {
  display: block;
  margin-bottom: 6px;
  font-size: 12px;
  text-transform: uppercase;
  letter-spacing: 0.1em;
  color: rgba(229, 231, 235, 0.6);
  font-weight: 600;
}

.filters input,
.filters select {
  width: 100%;
  padding: 8px 10px;
  border-radius: 10px;
  border: 1px solid rgba(59, 130, 246, 0.3);
  background: rgba(15, 23, 42, 0.4);
  color: #e2e8f0;
  font-family: inherit;
}

.filters input:focus,
.filters select:focus {
  outline: none;
  border-color: #3b82f6;
  box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
}

.filters__actions {
  display: flex;
  gap: 10px;
  align-items: end;
  grid-column: 1 / -1;
}

.btn {
  padding: 10px 16px;
  border-radius: 10px;
  border: none;
  background: linear-gradient(90deg, #3b82f6, #60a5fa);
  color: #fff;
  font-weight: 600;
  cursor: pointer;
  font-size: 13px;
  transition: all 0.2s;
  flex: 1;
}

.btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3);
}

.btn.ghost {
  background: rgba(59, 130, 246, 0.1);
  color: #93c5fd;
  border: 1px solid rgba(59, 130, 246, 0.3);
  flex: 0.3;
}

.admin-console__table {
  overflow-x: auto;
  border-radius: 16px;
  border: 1px solid rgba(59, 130, 246, 0.2);
  background: rgba(15, 23, 42, 0.5);
}

.admin-console table {
  width: 100%;
  border-collapse: collapse;
  min-width: 900px;
}

.admin-console th,
.admin-console td {
  padding: 12px 14px;
  border-bottom: 1px solid rgba(59, 130, 246, 0.15);
  text-align: left;
  vertical-align: top;
  font-size: 13px;
}

.admin-console th {
  font-size: 12px;
  text-transform: uppercase;
  letter-spacing: 0.1em;
  color: #93c5fd;
  background: rgba(15, 23, 42, 0.8);
  position: sticky;
  top: 0;
  font-weight: 600;
}

.admin-console td {
  color: rgba(229, 231, 235, 0.85);
}

.admin-console .empty {
  text-align: center;
  color: rgba(229, 231, 235, 0.5);
  padding: 40px 20px;
}

.tag {
  display: inline-flex;
  padding: 4px 8px;
  border-radius: 6px;
  font-size: 11px;
  text-transform: uppercase;
  letter-spacing: 0.1em;
  font-weight: 600;
}

.tag--create {
  background: rgba(34, 197, 94, 0.15);
  color: #86efac;
  border: 1px solid rgba(34, 197, 94, 0.3);
}

.tag--update {
  background: rgba(59, 130, 246, 0.15);
  color: #93c5fd;
  border: 1px solid rgba(59, 130, 246, 0.3);
}

.tag--delete {
  background: rgba(239, 68, 68, 0.15);
  color: #fca5a5;
  border: 1px solid rgba(239, 68, 68, 0.3);
}

.json {
  white-space: pre-wrap;
  font-size: 12px;
  color: rgba(226, 232, 240, 0.75);
  font-family: monospace;
  max-height: 300px;
  overflow-y: auto;
}

details {
  cursor: pointer;
}

summary {
  padding: 4px 8px;
  border-radius: 4px;
  background: rgba(59, 130, 246, 0.1);
  color: #93c5fd;
  font-weight: 600;
  transition: all 0.2s;
}

summary:hover {
  background: rgba(59, 130, 246, 0.2);
}

@media (max-width: 720px) {
  .admin-console__hero {
    flex-direction: column;
  }
  
  .admin-console__hero h1 {
    font-size: 22px;
  }
  
  .filters {
    grid-template-columns: 1fr;
  }
  
  .filters__actions {
    flex-direction: column;
  }
}
</style>

<%- include('partials/footer') %>
