<%- include('partials/header') %>
<%- include('partials/nav') %>

<% const formatDate = (d) => d ? new Date(d).toISOString().slice(0, 10) : ""; %>
<% const permanentCount = (items || []).filter(i => i.permanent).length; %>
<% const temporaryCount = (items || []).length - permanentCount; %>
<% const getInitials = (prenom, nom) => `${prenom[0] || ''}${nom[0] || ''}`.toUpperCase(); %>

<div class="blacklist-page">
  <!-- Hero Section -->
  <div class="blacklist-hero">
    <div class="hero-glow"></div>
    <div class="hero-content">
      <div class="hero-badge">
        <span class="badge-icon">‚õî</span>
        <span class="badge-text">S√©curit√© & Contr√¥le</span>
        <span class="badge-icon">‚õî</span>
      </div>
      <h1 class="hero-title">
        <span class="title-line">Liste</span>
        <span class="title-line title-accent">d'Interdiction</span>
      </h1>
      <p class="hero-description">
        Gestion centralis√©e des personnes interdites d'acc√®s √† l'√©tablissement
      </p>
      
      <!-- Stats Cards -->
      <div class="hero-stats">
        <div class="stat-card">
          <div class="stat-icon">üë•</div>
          <div class="stat-content">
            <span class="stat-label">Total</span>
            <span class="stat-value"><%= items.length %></span>
          </div>
        </div>
        <div class="stat-card">
          <div class="stat-icon">‚è∞</div>
          <div class="stat-content">
            <span class="stat-label">Temporaires</span>
            <span class="stat-value"><%= temporaryCount %></span>
          </div>
        </div>
        <div class="stat-card">
          <div class="stat-icon">‚ôæÔ∏è</div>
          <div class="stat-content">
            <span class="stat-label">Permanents</span>
            <span class="stat-value"><%= permanentCount %></span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="blacklist-container">
    
    <!-- Search Bar -->
    <div class="search-section">
      <div class="search-wrapper">
        <svg class="search-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="11" cy="11" r="8"></circle>
          <path d="m21 21-4.35-4.35"></path>
        </svg>
        <input type="text" id="searchInput" class="search-input" placeholder="Rechercher par nom ou pr√©nom..." />
      </div>
    </div>

  <!-- Formulaire d'ajout (uniquement connect√©) -->
  <% if (user) { %>
    <div class="add-section">
      <div class="add-card">
        <div class="add-header">
          <div class="add-icon">
            <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="10"></circle>
              <line x1="12" y1="8" x2="12" y2="16"></line>
              <line x1="8" y1="12" x2="16" y2="12"></line>
            </svg>
          </div>
          <div>
            <h3 class="add-title">Ajouter √† la Blacklist</h3>
            <p class="add-subtitle">Enregistrer une nouvelle interdiction</p>
          </div>
        </div>
        <form method="post" action="/blacklist" enctype="multipart/form-data" class="add-form">
          <% if (authToken) { %>
            <input type="hidden" name="token" value="<%= authToken %>" />
          <% } %>
          <div class="form-row">
            <div class="form-group">
              <label class="form-label">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                  <circle cx="12" cy="7" r="4"></circle>
                </svg>
                Pr√©nom
              </label>
              <input name="prenom" class="form-input" placeholder="Ex: Jean" required />
            </div>
            <div class="form-group">
              <label class="form-label">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                  <circle cx="12" cy="7" r="4"></circle>
                </svg>
                Nom
              </label>
              <input name="nom" class="form-input" placeholder="Ex: Martin" required />
            </div>
          </div>
          <div class="form-group">
            <label class="form-label">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                <polyline points="14 2 14 8 20 8"></polyline>
                <line x1="16" y1="13" x2="8" y2="13"></line>
                <line x1="16" y1="17" x2="8" y2="17"></line>
              </svg>
              Raison de l'interdiction
            </label>
            <textarea name="raison" class="form-textarea" rows="3" placeholder="D√©taillez la raison de l'interdiction..."></textarea>
          </div>
          <div class="form-row">
            <div class="form-group">
              <label class="form-label">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                  <line x1="16" y1="2" x2="16" y2="6"></line>
                  <line x1="8" y1="2" x2="8" y2="6"></line>
                  <line x1="3" y1="10" x2="21" y2="10"></line>
                </svg>
                Date d'expiration
              </label>
              <input name="expireAt" type="date" class="form-input expire-input" />
            </div>
            <div class="form-group">
              <label class="form-label">Type d'interdiction</label>
              <label class="checkbox-container">
                <input name="permanent" type="checkbox" class="perm-checkbox" />
                <span class="checkbox-label">‚ôæÔ∏è Permanent</span>
              </label>
            </div>
          </div>
          <div class="form-row">
            <div class="form-group">
              <label class="form-label">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
                </svg>
                URL Photo
              </label>
              <input name="photoUrl" class="form-input" placeholder="https://..." />
            </div>
            <div class="form-group">
              <label class="form-label">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                  <circle cx="8.5" cy="8.5" r="1.5"></circle>
                  <polyline points="21 15 16 10 5 21"></polyline>
                </svg>
                Upload Photo
              </label>
              <input name="photo" type="file" accept="image/*" class="form-input" />
            </div>
          </div>
          <button class="form-submit" type="submit">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="9 11 12 14 22 4"></polyline>
              <path d="M21 12v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11"></path>
            </svg>
            <span>Enregistrer l'interdiction</span>
          </button>
        </form>
      </div>
    </div>
  <% } %>

  <!-- Liste des blacklist√©s -->
  <div class="blacklist-section">
    <div class="section-header">
      <h2 class="section-title">Toutes les interdictions</h2>
      <span class="blacklist-count" id="count"><%= items.length %> personne<%= items.length > 1 ? 's' : '' %></span>
    </div>

    <% if (items.length === 0) { %>
      <div class="empty-state-modern">
        <div class="empty-icon">üì≠</div>
        <h3>Aucune interdiction enregistr√©e</h3>
        <p>La liste d'interdiction est actuellement vide</p>
        <% if (!user) { %>
          <a href="/login" class="empty-cta">Se connecter pour ajouter</a>
        <% } %>
      </div>
    <% } else { %>
      <div class="blacklist-grid" id="blacklistContainer">
        <% items.forEach((item, index) => { %>
          <article class="person-card" data-nom="<%= (item.nom || '').toLowerCase() %>" data-prenom="<%= (item.prenom || '').toLowerCase() %>">
            <div class="card-shine"></div>
            
            <div class="person-header">
              <div class="person-avatar">
                <% if (item.photoUrl) { %>
                  <img src="<%= item.photoUrl %>" alt="<%= item.prenom %> <%= item.nom %>" class="avatar-img zoomable" data-full="<%= item.photoUrl %>" />
                <% } else { %>
                  <span class="avatar-text"><%= getInitials(item.prenom || 'X', item.nom || 'X') %></span>
                <% } %>
                <div class="avatar-glow"></div>
              </div>
              <div class="person-info">
                <h3 class="person-name"><%= item.prenom %> <%= item.nom %></h3>
                <span class="person-status">
                  <% if (item.permanent) { %>
                    <span class="status-dot permanent"></span>
                    Interdiction permanente
                  <% } else { %>
                    <span class="status-dot temporary"></span>
                    Interdiction temporaire
                  <% } %>
                </span>
              </div>
            </div>

            <div class="person-body">
              <% if (item.raison) { %>
                <div class="person-reason">
                  <div class="reason-header">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                      <polyline points="14 2 14 8 20 8"></polyline>
                      <line x1="16" y1="13" x2="8" y2="13"></line>
                      <line x1="16" y1="17" x2="8" y2="17"></line>
                    </svg>
                    <span>Raison</span>
                  </div>
                  <p class="reason-text"><%= item.raison %></p>
                </div>
              <% } else { %>
                <div class="person-empty">
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="10"></circle>
                    <line x1="12" y1="16" x2="12" y2="12"></line>
                    <line x1="12" y1="8" x2="12.01" y2="8"></line>
                  </svg>
                  <span>Aucune raison sp√©cifi√©e</span>
                </div>
              <% } %>
              
              <div class="person-meta">
                <div class="meta-item">
                  <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                    <line x1="16" y1="2" x2="16" y2="6"></line>
                    <line x1="8" y1="2" x2="8" y2="6"></line>
                    <line x1="3" y1="10" x2="21" y2="10"></line>
                  </svg>
                  <% if (item.permanent) { %>
                    <span>‚ôæÔ∏è Sans limite</span>
                  <% } else if (item.expireAt) { %>
                    <span>Expire le <%= item.expireAt.toLocaleDateString('fr-FR') %></span>
                  <% } else { %>
                    <span>Pas de date</span>
                  <% } %>
                </div>
              </div>
            </div>

            <% if (user) { %>
              <div class="person-footer">
                <button class="edit-btn" type="button" data-edit="<%= item._id %>">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                    <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                  </svg>
                  <span>Modifier</span>
                </button>
                <form method="post" action="/blacklist/<%= item._id %>/delete" class="delete-action">
                  <% if (authToken) { %>
                    <input type="hidden" name="token" value="<%= authToken %>" />
                  <% } %>
                  <button class="delete-btn" type="submit" onclick="return confirm('Supprimer cette interdiction ?')">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <polyline points="3 6 5 6 21 6"></polyline>
                      <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                      <line x1="10" y1="11" x2="10" y2="17"></line>
                      <line x1="14" y1="11" x2="14" y2="17"></line>
                    </svg>
                    <span>Supprimer</span>
                  </button>
                </form>
              </div>
              
              <!-- Edit Form -->
              <div class="edit-form-wrapper" data-edit-form="<%= item._id %>">
                <form method="post" action="/blacklist/<%= item._id %>/update" class="edit-form" enctype="multipart/form-data">
                  <% if (authToken) { %>
                    <input type="hidden" name="token" value="<%= authToken %>" />
                  <% } %>
                  <div class="form-row">
                    <div class="form-group">
                      <label class="form-label">Pr√©nom</label>
                      <input name="prenom" value="<%= item.prenom %>" class="form-input" required />
                    </div>
                    <div class="form-group">
                      <label class="form-label">Nom</label>
                      <input name="nom" value="<%= item.nom %>" class="form-input" required />
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="form-label">Raison</label>
                    <textarea name="raison" class="form-textarea" rows="2"><%= item.raison || '' %></textarea>
                  </div>
                  <div class="form-row">
                    <div class="form-group">
                      <label class="form-label">Date d'expiration</label>
                      <input name="expireAt" type="date" value="<%= formatDate(item.expireAt) %>" class="form-input expire-input" />
                    </div>
                    <div class="form-group">
                      <label class="checkbox-container">
                        <input name="permanent" type="checkbox" class="perm-checkbox" <%= item.permanent ? 'checked' : '' %> />
                        <span class="checkbox-label">‚ôæÔ∏è Permanent</span>
                      </label>
                    </div>
                  </div>
                  <div class="form-row">
                    <div class="form-group">
                      <label class="form-label">URL Photo</label>
                      <input name="photoUrl" value="<%= item.photoUrl || '' %>" class="form-input" />
                    </div>
                    <div class="form-group">
                      <label class="form-label">Upload Photo</label>
                      <input name="photo" type="file" accept="image/*" class="form-input" />
                    </div>
                  </div>
                  <button class="form-submit small" type="submit">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <polyline points="20 6 9 17 4 12"></polyline>
                    </svg>
                    <span>Enregistrer</span>
                  </button>
                </form>
              </div>
            <% } %>
          </article>
        <% }); %>
      </div>
    <% } %>
  </div>

  </div>
</div>

<style>
  /* ===== BASE STYLES ===== */
  .blacklist-page {
    min-height: 100vh;
    padding-bottom: 80px;
    background: #000;
  }

  /* ===== HERO SECTION ===== */
  .blacklist-hero {
    position: relative;
    padding: 100px 20px 80px;
    text-align: center;
    overflow: hidden;
  }

  .hero-glow {
    position: absolute;
    top: -200px;
    left: 50%;
    transform: translateX(-50%);
    width: 700px;
    height: 700px;
    background: radial-gradient(circle, rgba(255,59,82,0.05) 0%, transparent 70%);
    pointer-events: none;
    animation: pulse 4s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% { transform: translateX(-50%) scale(1); opacity: 0.2; }
    50% { transform: translateX(-50%) scale(1.05); opacity: 0.3; }
  }

  .hero-content {
    position: relative;
    z-index: 2;
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 12px;
    padding: 10px 24px;
    background: linear-gradient(135deg, rgba(255,59,82,0.1), rgba(255,59,82,0.03));
    border: 1px solid rgba(255,59,82,0.3);
    border-radius: 50px;
    margin-bottom: 30px;
    backdrop-filter: blur(10px);
    animation: fadeInDown 0.8s ease-out;
    box-shadow: 0 0 10px rgba(255,59,82,0.1);
  }

  .badge-icon {
    color: #ff3b52;
    font-size: 12px;
  }

  .badge-text {
    color: #ff3b52;
    font-size: 13px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 2px;
  }

  .hero-title {
    margin: 0 0 30px 0;
    display: flex;
    flex-direction: column;
    gap: 5px;
    animation: fadeInUp 1s ease-out;
  }

  .title-line {
    font-size: 52px;
    font-weight: 800;
    background: linear-gradient(135deg, #fff 0%, #e0e0e0 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    line-height: 1.1;
  }

  .title-accent {
    background: linear-gradient(135deg, #ff3b52 0%, #ff6b7a 50%, #ff3b52 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: shimmer 3s ease-in-out infinite;
  }

  @keyframes shimmer {
    0%, 100% { filter: brightness(1); }
    50% { filter: brightness(1.3); }
  }

  .hero-description {
    font-size: 18px;
    color: var(--muted);
    margin: 0 auto 50px;
    max-width: 600px;
    line-height: 1.6;
    animation: fadeIn 1.2s ease-out;
  }

  @keyframes fadeInDown {
    from { opacity: 0; transform: translateY(-30px); }
    to { opacity: 1; transform: translateY(0); }
  }

  @keyframes fadeInUp {
    from { opacity: 0; transform: translateY(30px); }
    to { opacity: 1; transform: translateY(0); }
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  /* ===== STATS CARDS ===== */
  .hero-stats {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 20px;
    max-width: 800px;
    margin: 0 auto;
    animation: fadeIn 1.4s ease-out;
  }

  .stat-card {
    display: flex;
    align-items: center;
    gap: 15px;
    padding: 20px 25px;
    background: linear-gradient(135deg, rgba(255,255,255,0.02), rgba(255,255,255,0.01));
    border: 1px solid rgba(255,59,82,0.2);
    border-radius: 16px;
    transition: all 0.3s ease;
    box-shadow: none;
  }

  .stat-card:hover {
    transform: translateY(-5px);
    border-color: rgba(255,59,82,0.4);
    box-shadow: 0 5px 15px rgba(255,59,82,0.1);
  }

  .stat-icon {
    font-size: 32px;
    filter: none;
  }

  .stat-content {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }

  .stat-label {
    font-size: 12px;
    color: var(--muted);
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 4px;
  }

  .stat-value {
    font-size: 28px;
    font-weight: 800;
    color: #ff3b52;
  }

  /* ===== CONTAINER ===== */
  .blacklist-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  /* ===== SEARCH SECTION ===== */
  .search-section {
    margin-bottom: 40px;
  }

  .search-wrapper {
    position: relative;
    max-width: 600px;
    margin: 0 auto;
  }

  .search-icon {
    position: absolute;
    left: 20px;
    top: 50%;
    transform: translateY(-50%);
    color: #ff3b52;
    pointer-events: none;
  }

  .search-input {
    width: 100%;
    padding: 16px 20px 16px 50px;
    background: rgba(255,59,82,0.03);
    border: 1px solid rgba(255,59,82,0.2);
    border-radius: 50px;
    color: #e9eef3;
    font-size: 15px;
    outline: none;
    transition: all 0.3s ease;
    box-sizing: border-box;
  }

  .search-input:focus {
    border-color: #ff3b52;
    box-shadow: 0 0 0 2px rgba(255,59,82,0.1);
    background: rgba(255,59,82,0.03);
  }

  .search-input::placeholder {
    color: rgba(255,255,255,0.3);
  }

  /* ===== ADD SECTION ===== */
  .add-section {
    margin-bottom: 50px;
  }

  .add-card {
    background: linear-gradient(135deg, rgba(255,59,82,0.05), rgba(255,59,82,0.02));
    border: 1px solid rgba(255,59,82,0.2);
    border-radius: 20px;
    padding: 35px;
    box-shadow: none;
  }

  .add-header {
    display: flex;
    align-items: center;
    gap: 20px;
    margin-bottom: 30px;
  }

  .add-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 60px;
    height: 60px;
    background: linear-gradient(135deg, rgba(255,59,82,0.2), rgba(255,59,82,0.05));
    border: 2px solid rgba(255,59,82,0.3);
    border-radius: 16px;
    color: #ff3b52;
    flex-shrink: 0;
    box-shadow: none;
  }

  .add-title {
    font-size: 24px;
    font-weight: 700;
    margin: 0 0 5px 0;
    color: #fff;
  }

  .add-subtitle {
    font-size: 14px;
    color: var(--muted);
    margin: 0;
  }

  /* ===== FORM STYLES ===== */
  .add-form, .form-group {
    display: flex;
    flex-direction: column;
  }

  .form-group {
    margin-bottom: 20px;
  }

  .form-row {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 15px;
    margin-bottom: 20px;
  }

  .form-label {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 13px;
    font-weight: 600;
    color: #ff3b52;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 10px;
  }

  .form-label svg {
    color: #ff3b52;
  }

  .form-input,
  .form-textarea {
    padding: 14px 18px;
    background: rgba(255,59,82,0.03);
    border: 1px solid rgba(255,59,82,0.2);
    border-radius: 12px;
    color: #e9eef3;
    font-size: 15px;
    font-family: inherit;
    outline: none;
    transition: all 0.3s ease;
  }

  .form-input:focus,
  .form-textarea:focus {
    border-color: #ff3b52;
    box-shadow: 0 0 0 2px rgba(255,59,82,0.1);
    background: rgba(255,59,82,0.03);
  }

  .form-textarea {
    resize: vertical;
    min-height: 80px;
    line-height: 1.6;
  }

  .checkbox-container {
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 14px 18px;
    background: rgba(255,59,82,0.03);
    border: 1px solid rgba(255,59,82,0.2);
    border-radius: 12px;
    cursor: pointer;
    transition: all 0.3s ease;
    margin-top: 24px;
  }

  .checkbox-container:hover {
