<%- include('partials/header') %>
<%- include('partials/nav') %>

<% const formatDate = (d) => d ? new Date(d).toISOString().slice(0, 10) : ""; %>

<div class="container page-shell">
  <div class="page-toolbar">
    <input
      type="text"
      id="searchInput"
      placeholder="Rechercher..."
      class="page-search-input"
    />
    <button class="page-search-btn" type="button">üîç</button>
  </div>

  <div class="page-header">
    <h1>üö´ BlackList</h1>
    <p>Gestion des personnes interdites d'acc√®s</p>
    <p class="page-note">Les fiches peuvent etre modifiees apres publication.</p>
  </div>

  <!-- Formulaire d'ajout (uniquement connect√©) -->
  <% if (user) { %>
    <div class="card wide add-form">
      <h3>‚ûï Ajouter une personne</h3>
      <form method="post" action="/blacklist" enctype="multipart/form-data">
        <div class="row">
          <input name="prenom" placeholder="Pr√©nom" required />
          <input name="nom" placeholder="Nom" required />
        </div>
        <input name="raison" placeholder="Raison (optionnel)" />
        <div class="row">
          <input name="expireAt" type="date" placeholder="Expiration (optionnel)" class="expire-input" />
          <label class="checkbox-row">
            <input name="permanent" type="checkbox" class="perm-checkbox" />
            <span>Blacklist permanent</span>
          </label>
        </div>
        <div class="row">
          <input name="photoUrl" placeholder="URL de la photo (optionnel)" />
          <input name="photo" type="file" accept="image/*" />
        </div>
        <button class="btn btn-add" type="submit">Ajouter</button>
      </form>
    </div>
  <% } %>

  <!-- Liste des blacklist√©s -->
  <div class="list-section">
    <div class="list-header">
      <h3>Personnes blacklist√©es (<span id="count" class="badge"><%= items.length %></span>)</h3>
    </div>
    <div class="list" id="blacklistContainer">
      <% if (items.length === 0) { %>
        <p class="empty-state">üì≠ Aucune personne dans la blacklist</p>
      <% } else { %>
        <% items.forEach(item => { %>
          <div class="list-item" data-nom="<%= item.nom.toLowerCase() %>" data-prenom="<%= item.prenom.toLowerCase() %>">
            <div class="item-avatar">
              <% if (item.photoUrl) { %>
                <img src="<%= item.photoUrl %>" alt="<%= item.prenom %> <%= item.nom %>" class="zoomable" data-full="<%= item.photoUrl %>" />
              <% } else { %>
                <div class="item-avatar__placeholder">üë§</div>
              <% } %>
            </div>
            <div class="item-content">
              <div class="item-header">
                <h4><%= item.prenom %> <%= item.nom %></h4>
              </div>
              <% if (item.raison) { %>
                <p class="item-reason">üìù <%= item.raison %></p>
              <% } %>
              <% if (item.permanent) { %>
                <p class="item-date">‚ôæÔ∏è Blacklist permanent</p>
              <% } else if (item.expireAt) { %>
                <p class="item-date">‚è∞ Expire le <%= item.expireAt.toLocaleDateString('fr-FR') %></p>
              <% } %>
            </div>
            <% if (user) { %>
              <div class="item-actions">
                <button class="btn-edit" type="button" data-edit="<%= item._id %>">Editer</button>
                <form method="post" action="/blacklist/<%= item._id %>/delete" class="delete-form">
                  <button class="btn-delete" type="submit" title="Supprimer">üóëÔ∏è</button>
                </form>
              </div>
            <% } %>
          </div>
          <% if (user) { %>
            <form method="post" action="/blacklist/<%= item._id %>/update" class="edit-form" data-edit-form="<%= item._id %>" enctype="multipart/form-data">
              <div class="row">
                <input name="prenom" value="<%= item.prenom %>" required />
                <input name="nom" value="<%= item.nom %>" required />
              </div>
              <input name="raison" value="<%= item.raison || '' %>" placeholder="Raison (optionnel)" />
              <div class="row">
                <input name="expireAt" type="date" value="<%= formatDate(item.expireAt) %>" class="expire-input" />
                <label class="checkbox-row">
                  <input name="permanent" type="checkbox" class="perm-checkbox" <%= item.permanent ? 'checked' : '' %> />
                  <span>Blacklist permanent</span>
                </label>
              </div>
              <div class="row">
                <input name="photoUrl" value="<%= item.photoUrl || '' %>" placeholder="URL de la photo (optionnel)" />
                <input name="photo" type="file" accept="image/*" />
              </div>
              <button class="btn btn-add" type="submit">Enregistrer</button>
            </form>
          <% } %>
        <% }); %>
      <% } %>
    </div>
  </div>

</div>

