  /* ===== BLACKLIST SECTION ===== */
  .blacklist-section {
    margin-top: 30px;
  }

  .section-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 30px;
    padding-bottom: 15px;
    border-bottom: 1px solid rgba(255,59,82,0.2);
  }

  .section-title {
    font-size: 28px;
    font-weight: 700;
    margin: 0;
    color: #fff;
  }

  .blacklist-count {
    padding: 6px 16px;
    background: rgba(255,59,82,0.1);
    border: 1px solid rgba(255,59,82,0.3);
    border-radius: 20px;
    color: #ff3b52;
    font-size: 14px;
    font-weight: 600;
    box-shadow: none;
  }

  /* ===== BLACKLIST GRID ===== */
  .blacklist-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 25px;
  }

  .person-card {
    position: relative;
    background: linear-gradient(145deg, rgba(255,59,82,0.03), rgba(255,59,82,0.01));
    border: 1px solid rgba(255,59,82,0.2);
    border-radius: 20px;
    padding: 25px;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    animation: slideInUp 0.6s ease-out both;
  }

  @keyframes slideInUp {
    from { opacity: 0; transform: translateY(30px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .person-card:hover {
    transform: translateY(-8px);
    border-color: rgba(255,59,82,0.4);
    box-shadow: 0 10px 25px rgba(255,59,82,0.1);
  }

  .card-shine {
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: linear-gradient(45deg, transparent 40%, rgba(255,59,82,0.03) 50%, transparent 60%);
    transform: rotate(45deg);
    animation: shine 8s ease-in-out infinite;
  }

  @keyframes shine {
    0%, 100% { transform: translateX(-100%) translateY(-100%) rotate(45deg); }
    50% { transform: translateX(100%) translateY(100%) rotate(45deg); }
  }

  /* ===== PERSON HEADER ===== */
  .person-header {
    display: flex;
    align-items: center;
    gap: 15px;
    margin-bottom: 20px;
    position: relative;
    z-index: 1;
  }

  .person-avatar {
    position: relative;
    width: 60px;
    height: 60px;
    background: linear-gradient(135deg, rgba(255,59,82,0.2), rgba(255,59,82,0.05));
    border: 2px solid rgba(255,59,82,0.3);
    border-radius: 14px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    box-shadow: none;
    overflow: hidden;
  }

  .avatar-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    cursor: zoom-in;
  }

  .avatar-text {
    font-size: 20px;
    font-weight: 700;
    color: #ff3b52;
    z-index: 2;
    position: relative;
  }

  .avatar-glow {
    position: absolute;
    inset: -5px;
    background: radial-gradient(circle, rgba(255,59,82,0.1) 0%, transparent 70%);
    border-radius: 14px;
    animation: pulse-glow 3s ease-in-out infinite;
  }

  @keyframes pulse-glow {
    0%, 100% { opacity: 0.2; transform: scale(1); }
    50% { opacity: 0.4; transform: scale(1.05); }
  }

  .person-info {
    flex: 1;
  }

  .person-name {
    font-size: 20px;
    font-weight: 700;
    margin: 0 0 5px 0;
    color: #fff;
  }

  .person-status {
    display: flex;
    align-items: center;
    gap: 6px;
    font-size: 12px;
    color: var(--muted);
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .status-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    animation: pulse-dot 2s ease-in-out infinite;
  }

  .status-dot.permanent {
    background: linear-gradient(135deg, #ff3b52, #ff6b7a);
  }

  .status-dot.temporary {
    background: linear-gradient(135deg, #ffa500, #ffb732);
  }

  @keyframes pulse-dot {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }

  /* ===== PERSON BODY ===== */
  .person-body {
    position: relative;
    z-index: 1;
    margin-bottom: 15px;
  }

  .person-reason {
    padding: 15px;
    background: rgba(255,255,255,0.02);
    border: 1px solid rgba(255,59,82,0.15);
    border-left: 3px solid #ff3b52;
    border-radius: 10px;
    margin-bottom: 15px;
  }

  .reason-header {
    display: flex;
    align-items: center;
    gap: 6px;
    color: #ff3b52;
    font-size: 12px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 8px;
  }

  .reason-text {
    margin: 0;
    color: #e9eef3;
    font-size: 14px;
    line-height: 1.5;
  }

  .person-empty {
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 15px;
    background: rgba(255,255,255,0.02);
    border: 1px solid rgba(255,255,255,0.1);
    border-radius: 10px;
    color: var(--muted);
    font-size: 13px;
    margin-bottom: 15px;
  }

  .person-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
  }

  .meta-item {
    display: flex;
    align-items: center;
    gap: 6px;
    padding: 6px 12px;
    background: rgba(255,255,255,0.02);
    border: 1px solid rgba(255,255,255,0.1);
    border-radius: 20px;
    color: var(--muted);
    font-size: 12px;
  }

  /* ===== PERSON FOOTER ===== */
  .person-footer {
    display: flex;
    gap: 10px;
    padding-top: 15px;
    border-top: 1px solid rgba(255,59,82,0.15);
    position: relative;
    z-index: 1;
  }

  .edit-btn,
  .delete-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 6px;
    padding: 10px 16px;
    border-radius: 10px;
    font-size: 13px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    border: none;
  }

  .edit-btn {
    flex: 1;
    background: rgba(59,130,246,0.1);
    border: 1px solid rgba(59,130,246,0.3);
    color: #3b82f6;
  }

  .edit-btn:hover {
    background: rgba(59,130,246,0.2);
    border-color: rgba(59,130,246,0.5);
  }

  .delete-action {
    display: flex;
  }

  .delete-btn {
    background: rgba(255,59,82,0.1);
    border: 1px solid rgba(255,59,82,0.3);
    color: #ff3b52;
  }

  .delete-btn:hover {
    background: rgba(255,59,82,0.2);
    border-color: rgba(255,59,82,0.5);
  }

  /* ===== EDIT FORM ===== */
  .edit-form-wrapper {
    display: none;
    margin-top: 20px;
    padding: 20px;
    background: rgba(0,0,0,0.4);
    border: 1px solid rgba(255,59,82,0.2);
    border-radius: 12px;
  }

  .edit-form-wrapper.is-open {
    display: block;
  }

  /* ===== MODALS ===== */
  .photo-modal {
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.9);
    display: none;
    align-items: center;
    justify-content: center;
    z-index: 1000;
    padding: 20px;
    cursor: zoom-out;
  }

  .photo-modal.is-open {
    display: flex;
  }

  .photo-modal img {
    max-width: 90vw;
    max-height: 90vh;
    border-radius: 12px;
    box-shadow: 0 20px 60px rgba(0,0,0,0.8);
  }

  /* ===== EMPTY STATE ===== */
  .empty-state-modern {
    text-align: center;
    padding: 80px 20px;
  }

  .empty-icon {
    font-size: 80px;
    margin-bottom: 20px;
  }

  .empty-state-modern h3 {
    color: #fff;
    font-size: 24px;
    margin: 0 0 10px 0;
  }

  .empty-state-modern p {
    color: var(--muted);
    font-size: 16px;
    margin: 0 0 30px 0;
  }

  .empty-cta {
    display: inline-block;
    padding: 12px 28px;
    background: linear-gradient(135deg, #ff3b52, #ff6b7a);
    color: #fff;
    font-weight: 700;
    border-radius: 10px;
    transition: all 0.3s ease;
    text-decoration: none;
  }

  .empty-cta:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(255,59,82,0.15);
  }

  /* ===== RESPONSIVE ===== */
  @media (max-width: 1024px) {
    .blacklist-grid {
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    }

    .title-line {
      font-size: 42px;
    }
  }

  @media (max-width: 768px) {
    .blacklist-hero {
      padding: 60px 20px 50px;
    }

    .title-line {
      font-size: 36px;
    }

    .hero-description {
      font-size: 16px;
    }

    .hero-stats {
      grid-template-columns: 1fr;
    }

    .blacklist-grid {
      grid-template-columns: 1fr;
    }

    .form-row {
      grid-template-columns: 1fr;
    }
  }
</style>

<script>
// Search functionality
document.getElementById('searchInput').addEventListener('input', function() {
  const searchTerm = this.value.toLowerCase();
  const items = document.querySelectorAll('.blacklist-grid .person-card');
  let visibleCount = 0;

  items.forEach(item => {
    const nom = item.getAttribute('data-nom');
    const prenom = item.getAttribute('data-prenom');
    
    if (nom.includes(searchTerm) || prenom.includes(searchTerm)) {
      item.style.display = '';
      visibleCount++;
    } else {
      item.style.display = 'none';
    }
  });

  document.getElementById('count').textContent = visibleCount;
});

// Edit form toggle
document.querySelectorAll('[data-edit]').forEach((btn) => {
  btn.addEventListener('click', () => {
    const id = btn.getAttribute('data-edit');
    const form = document.querySelector(`[data-edit-form="${id}"]`);
    if (form) form.classList.toggle('is-open');
  });
});

// Permanent checkbox sync
const syncPermanent = (scope) => {
  scope.querySelectorAll('.perm-checkbox').forEach((box) => {
    const form = box.closest('form');
    const expireInput = form?.querySelector('.expire-input');
    
    const toggle = () => {
      if (!expireInput) return;
      if (box.checked) {
        expireInput.value = '';
        expireInput.setAttribute('disabled', 'disabled');
      } else {
        expireInput.removeAttribute('disabled');
      }
    };
    
    box.addEventListener('change', toggle);
    toggle();
  });
};

syncPermanent(document);

// Photo zoom modal
const modal = document.createElement('div');
modal.className = 'photo-modal';
modal.innerHTML = '<img alt="Zoom" />';
document.body.appendChild(modal);

const modalImg = modal.querySelector('img');
modal.addEventListener('click', () => {
  modal.classList.remove('is-open');
  modalImg.removeAttribute('src');
});

document.querySelectorAll('.zoomable').forEach((img) => {
  img.addEventListener('click', () => {
    const src = img.getAttribute('data-full');
    if (!src) return;
    modalImg.setAttribute('src', src);
    modal.classList.add('is-open');
  });
});
</script>

