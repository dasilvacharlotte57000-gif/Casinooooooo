<%- include('partials/header') %>
<%- include('partials/nav') %>

<div class="container">
  <div class="page-header">
    <h1>üö´ BlackList</h1>
    <p>Gestion des personnes interdites d'acc√®s</p>
  </div>

  <!-- Barre de recherche -->
  <div class="search-card">
    <input 
      type="text" 
      id="searchInput" 
      placeholder="üîç Rechercher par nom ou pr√©nom..." 
      class="search-input"
    />
  </div>

  <!-- Formulaire d'ajout (uniquement connect√©) -->
  <% if (user) { %>
    <div class="card wide add-form">
      <h3>‚ûï Ajouter une personne</h3>
      <form method="post" action="/blacklist" enctype="multipart/form-data">
        <div class="row">
          <input name="prenom" placeholder="Pr√©nom" required />
          <input name="nom" placeholder="Nom" required />
        </div>
        <input name="raison" placeholder="Raison (optionnel)" />
        <input name="expireAt" type="date" placeholder="Expiration (optionnel)" />
        <div class="row">
          <input name="photoUrl" placeholder="URL de la photo (optionnel)" />
          <input name="photo" type="file" accept="image/*" />
        </div>
        <button class="btn btn-add" type="submit">Ajouter</button>
      </form>
    </div>
  <% } %>

  <!-- Liste des blacklist√©s -->
  <div class="list-section">
    <div class="list-header">
      <h3>Personnes blacklist√©es (<span id="count" class="badge"><%= items.length %></span>)</h3>
    </div>
    <div class="list" id="blacklistContainer">
      <% if (items.length === 0) { %>
        <p class="empty-state">üì≠ Aucune personne dans la blacklist</p>
      <% } else { %>
        <% items.forEach(item => { %>
          <div class="list-item" data-nom="<%= item.nom.toLowerCase() %>" data-prenom="<%= item.prenom.toLowerCase() %>">
            <div class="item-avatar">
              <% if (item.photoUrl) { %>
                <img src="<%= item.photoUrl %>" alt="<%= item.prenom %> <%= item.nom %>" />
              <% } else { %>
                <div class="item-avatar__placeholder">üë§</div>
              <% } %>
            </div>
            <div class="item-content">
              <div class="item-header">
                <h4><%= item.prenom %> <%= item.nom %></h4>
              </div>
              <% if (item.raison) { %>
                <p class="item-reason">üìù <%= item.raison %></p>
              <% } %>
              <% if (item.expireAt) { %>
                <p class="item-date">‚è∞ Expire le <%= item.expireAt.toLocaleDateString('fr-FR') %></p>
              <% } %>
            </div>
            <% if (user) { %>
              <form method="post" action="/blacklist/<%= item._id %>/delete" class="delete-form">
                <button class="btn-delete" type="submit" title="Supprimer">üóëÔ∏è</button>
              </form>
            <% } %>
          </div>
        <% }); %>
      <% } %>
    </div>
  </div>

  <!-- Message pour utilisateurs d√©connect√©s -->
  <% if (!user) { %>
    <div class="login-cta">
      <p>‚ú® Connectez-vous pour ajouter ou supprimer des personnes</p>
      <a href="/login" class="btn btn-primary">Se connecter</a>
    </div>
  <% } %>
</div>

<style>
.page-header {
  margin-bottom: 30px;
  text-align: center;
  border-bottom: 2px solid rgba(255, 215, 0, 0.2);
  padding-bottom: 20px;
}

.page-header h1 {
  margin: 0 0 10px 0;
  color: #ffd700;
  font-size: 36px;
}

.page-header p {
  color: #bdbdbd;
  margin: 0;
}

.search-card {
  background: rgba(255, 215, 0, 0.05);
  border: 1px solid rgba(255, 215, 0, 0.2);
  border-radius: 12px;
  padding: 15px;
  margin-bottom: 20px;
}

.search-input {
  width: 100%;
  padding: 12px 15px;
  border: 1px solid rgba(255, 215, 0, 0.3);
  border-radius: 8px;
  background: rgba(255, 255, 255, 0.05);
  color: #fff;
  font-size: 16px;
}

.search-input:focus {
  outline: none;
  border-color: #ffd700;
  box-shadow: 0 0 10px rgba(255, 215, 0, 0.2);
}

.add-form {
  background: rgba(255, 215, 0, 0.08);
  border: 1px solid rgba(255, 215, 0, 0.25);
  margin-bottom: 30px;
}

.add-form h3 {
  color: #ffd700;
  margin-top: 0;
}

.btn-add {
  background: linear-gradient(135deg, #ffd700, #ffed4e);
  color: #000;
  font-weight: bold;
}

.btn-add:hover {
  transform: scale(1.02);
}

.list-section {
  margin-top: 30px;
}

.list-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
  padding-bottom: 15px;
  border-bottom: 1px solid rgba(255, 215, 0, 0.2);
}

.list-header h3 {
  margin: 0;
  color: #ffd700;
  display: flex;
  align-items: center;
  gap: 10px;
}

.badge {
  background: rgba(255, 215, 0, 0.2);
  color: #ffd700;
  padding: 2px 8px;
  border-radius: 20px;
  font-size: 14px;
  font-weight: bold;
}

.list {
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.list-item {
  display: flex;
  gap: 14px;
  justify-content: space-between;
  align-items: center;
  background: rgba(255, 215, 0, 0.05);
  border: 1px solid rgba(255, 215, 0, 0.15);
  border-radius: 10px;
  padding: 16px;
  transition: all 0.3s ease;
  animation: slideIn 0.3s ease;
}

.list-item:hover {
  background: rgba(255, 215, 0, 0.08);
  border-color: rgba(255, 215, 0, 0.3);
  transform: translateX(5px);
}

.item-content {
  flex: 1;
}

.item-avatar {
  width: 64px;
  height: 64px;
  border-radius: 14px;
  overflow: hidden;
  background: rgba(255, 255, 255, 0.06);
  border: 1px solid rgba(255, 215, 0, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.item-avatar img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

.item-avatar__placeholder {
  font-size: 28px;
}

.item-header h4 {
  margin: 0 0 8px 0;
  color: #fff;
  font-size: 16px;
}

.item-reason,
.item-date {
  margin: 4px 0;
  color: #bdbdbd;
  font-size: 14px;
}

.btn-delete {
  background: rgba(255, 107, 107, 0.2);
  border: 1px solid rgba(255, 107, 107, 0.3);
  color: #ff6b6b;
  padding: 8px 12px;
  border-radius: 6px;
  cursor: pointer;
  transition: all 0.2s;
  font-size: 16px;
  margin-left: 10px;
}

.btn-delete:hover {
  background: rgba(255, 107, 107, 0.3);
  border-color: #ff6b6b;
}

.delete-form {
  display: flex;
}

.empty-state {
  text-align: center;
  color: #bdbdbd;
  padding: 30px;
  font-size: 16px;
}

.login-cta {
  background: rgba(255, 215, 0, 0.08);
  border: 2px solid rgba(255, 215, 0, 0.3);
  border-radius: 12px;
  padding: 30px;
  text-align: center;
  margin-top: 30px;
}

.login-cta p {
  color: #bdbdbd;
  margin: 0 0 15px 0;
  font-size: 16px;
}

.btn-primary {
  background: linear-gradient(135deg, #ffd700, #ffed4e);
  color: #000;
  padding: 10px 25px;
  border-radius: 6px;
  font-weight: bold;
}

.btn-primary:hover {
  transform: scale(1.05);
}

@keyframes slideIn {
  from {
    opacity: 0;
    transform: translateX(-10px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}
</style>

<script>
document.getElementById('searchInput').addEventListener('input', function() {
  const searchTerm = this.value.toLowerCase();
  const items = document.querySelectorAll('#blacklistContainer .list-item');
  let visibleCount = 0;

  items.forEach(item => {
    const nom = item.getAttribute('data-nom');
    const prenom = item.getAttribute('data-prenom');
    
    if (nom.includes(searchTerm) || prenom.includes(searchTerm)) {
      item.style.display = '';
      visibleCount++;
    } else {
      item.style.display = 'none';
    }
  });

  document.getElementById('count').textContent = visibleCount;
});
</script>

<%- include('partials/footer') %>

</body></html>
