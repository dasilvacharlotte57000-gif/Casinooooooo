<%- include('partials/header') %>
<%- include('partials/nav') %>

<% const formatDescription = (text) => (text || "").replace(/\n/g, "<br>"); %>

<div class="container page-shell">
  <div class="page-toolbar">
    <input type="text" class="page-search-input" placeholder="Rechercher..." />
    <button class="page-search-btn" type="button">üîç</button>
  </div>
  <div class="page-header">
    <h1>üë• Partenariat Employ√©s</h1>
    <p>Suivi des entreprises partenaires et descriptions</p>
  </div>

  <!-- Formulaire d'ajout (uniquement connect√©) -->
  <% if (user) { %>
    <div class="card wide add-form">
      <h3>‚ûï Ajouter une entreprise partenaire</h3>
      <form method="post" action="/employes" enctype="multipart/form-data">
        <input name="entrepriseName" placeholder="Nom de l'entreprise" required />
        <textarea name="description" placeholder="Description / informations (retours a la ligne possibles)"></textarea>
        <input name="photo" type="file" accept="image/*" placeholder="Photo (optionnel)" />
        <button class="btn btn-add" type="submit">Ajouter</button>
      </form>
    </div>
  <% } %>

  <!-- Liste des employ√©s/partenaires -->
  <div class="list-section">
    <div class="list-header">
      <h3>Partenariat Employ√©s (<span class="badge"><%= items.length %></span>)</h3>
    </div>
    <div class="list">
      <% if (items.length === 0) { %>
        <p class="empty-state">üì≠ Aucun employ√©/partenaire enregistr√©</p>
      <% } else { %>
        <% items.forEach(item => { %>
          <div class="list-item">
            <div class="item-avatar">
              <% if (item.photoUrl) { %>
                <img src="<%= item.photoUrl %>" alt="<%= item.entrepriseName || 'Entreprise' %>" />
              <% } else { %>
                <div class="item-avatar__placeholder">üë§</div>
              <% } %>
            </div>
            <div class="item-content">
              <div class="item-header">
                <h4><%= item.entrepriseName || 'Entreprise' %></h4>
              </div>
              <% if (item.description) { %>
                <p class="item-reason">üìù <%- formatDescription(item.description) %></p>
              <% } %>
            </div>
            <% if (user) { %>
              <form method="post" action="/employes/<%= item._id %>/delete" class="delete-form">
                <button class="btn-delete" type="submit" title="Supprimer">üóëÔ∏è</button>
              </form>
            <% } %>
          </div>
        <% }); %>
      <% } %>
    </div>
  </div>

</div>

<style>
.page-header {
  margin-bottom: 32px;
  text-align: center;
  border-bottom: 2px solid rgba(255, 215, 0, 0.18);
  padding-bottom: 18px;
}
.page-header h1 {
  margin: 0 0 10px 0;
  color: var(--accent);
  font-size: 38px;
  letter-spacing: 1px;
}
.page-header p {
  color: var(--muted);
  margin: 0;
}
.add-form {
  background: rgba(255, 215, 0, 0.10);
  border: 1px solid rgba(255, 215, 0, 0.22);
  margin-bottom: 32px;
  box-shadow: 0 4px 18px rgba(255,215,0,0.08);
}
.add-form h3 {
  color: var(--accent);
  margin-top: 0;
  font-size: 22px;
}
.btn-add {
  background: linear-gradient(135deg, var(--accent), var(--accent-strong));
  color: #000;
  font-weight: bold;
  padding: 13px 22px;
  border-radius: 10px;
  font-size: 16px;
  box-shadow: 0 2px 8px rgba(255,215,0,0.08);
}
.btn-add:hover {
  transform: scale(1.04);
  box-shadow: 0 6px 18px rgba(255,215,0,0.18);
}
.list-section {
  margin-top: 32px;
  padding: 20px;
  border-radius: 16px;
  background: rgba(0, 0, 0, 0.6);
  border: 1px solid rgba(255, 215, 0, 0.35);
  box-shadow: 0 0 24px rgba(255, 215, 0, 0.2);
}
.list-header {
  margin-bottom: 28px;
  padding-bottom: 14px;
  border-bottom: 1px solid rgba(255, 215, 0, 0.18);
  text-align: center;
}
.list-header h3 {
  margin: 0;
  color: var(--accent);
  display: flex;
  align-items: center;
  gap: 10px;
  font-size: 20px;
}
.badge {
  background: rgba(255, 215, 0, 0.13);
  color: var(--accent);
  padding: 2px 10px;
  border-radius: 20px;
  font-size: 15px;
  font-weight: bold;
}
.list {
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.list-item {
  display: flex;
  gap: 16px;
  justify-content: space-between;
  align-items: center;
  background: rgba(0, 0, 0, 0.65);
  border: 1px solid rgba(255, 215, 0, 0.35);
  border-radius: 14px;
  padding: 16px 18px;
  transition: all 0.3s ease;
  animation: slideIn 0.3s ease;
  box-shadow: inset 0 0 12px rgba(255, 215, 0, 0.12);
}

.list-item:hover {
  background: rgba(0, 0, 0, 0.75);
  border-color: rgba(255, 215, 0, 0.5);
  transform: none;
  box-shadow: inset 0 0 16px rgba(255, 215, 0, 0.16);
}

.item-avatar {
  width: 64px;
  height: 64px;
  border-radius: 14px;
  overflow: hidden;
  background: rgba(255, 255, 255, 0.06);
  border: 1px solid rgba(255, 215, 0, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.item-avatar img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

.item-avatar__placeholder {
  font-size: 28px;
}

.item-content {
  flex: 1;
}

.item-header h4 {
  margin: 0 0 8px 0;
  color: #e9eef3;
  font-size: 18px;
}

.item-reason {
  margin: 6px 0;
  color: var(--muted);
  font-size: 15px;
}

.btn-delete {
  background: rgba(255, 107, 107, 0.2);
  border: 1px solid rgba(255, 107, 107, 0.3);
  color: #ff6b6b;
  padding: 8px 12px;
  border-radius: 6px;
  cursor: pointer;
  transition: all 0.2s;
  font-size: 16px;
  margin-left: 10px;
}

.btn-delete:hover {
  background: rgba(255, 107, 107, 0.3);
  border-color: #ff6b6b;
}
.btn-delete:hover {
  background: rgba(255, 107, 107, 0.28);
  border-color: #ff6b6b;
}
.empty-state {
  text-align: center;
  color: var(--muted);
  padding: 44px;
  grid-column: 1 / -1;
  font-size: 18px;
}
.login-cta {
  background: rgba(255, 215, 0, 0.10);
  border: 2px solid rgba(255, 215, 0, 0.22);
  border-radius: 14px;
  padding: 32px;
  text-align: center;
  margin-top: 32px;
  box-shadow: 0 2px 12px rgba(255,215,0,0.07);
}
.login-cta p {
  color: var(--muted);
  margin: 0 0 15px 0;
  font-size: 16px;
}
.btn-primary {
  background: linear-gradient(135deg, var(--accent), var(--accent-strong));
  color: #000;
  padding: 12px 28px;
  border-radius: 10px;
  font-weight: bold;
  font-size: 16px;
}
.btn-primary:hover {
  transform: scale(1.05);
}
</style>

<script>
// Toggle actions (supprimer) when clicking on a card
document.addEventListener('click', function (e) {
  const card = e.target.closest('.employee-card');
  if (!card) return;
  // don't toggle when clicking on interactive elements inside the card
  if (e.target.closest('form') || e.target.closest('button') || e.target.tagName === 'A' || e.target.tagName === 'INPUT') return;
  card.classList.toggle('show-actions');
});
</script>

<%- include('partials/footer') %>

</body></html>