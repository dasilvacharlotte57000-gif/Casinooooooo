<%- include('partials/header') %>
<%- include('partials/nav') %>

<% const formatDescription = (text) => (text || "").replace(/\n/g, "<br>"); %>
<% const getInitials = (name) => name.split(' ').map(w => w[0]).slice(0, 2).join('').toUpperCase(); %>

<div class="partners-page">
  <!-- Hero Section -->
  <div class="partners-hero">
    <div class="hero-glow"></div>
    <div class="hero-content">
      <div class="hero-badge">
        <span class="diamond-icon">‚óÜ</span>
        <span class="badge-text">Partenariats Employ√©s</span>
        <span class="diamond-icon">‚óÜ</span>
      </div>
      <h1 class="hero-title">
        <span class="title-line">R√©seau de</span>
        <span class="title-line title-accent">Partenaires</span>
      </h1>
      <p class="hero-description">
        Gestion centralis√©e des entreprises partenaires et collaborations strat√©giques
      </p>
      
      <!-- Stats Cards -->
      <div class="hero-stats">
        <div class="stat-card">
          <div class="stat-icon">üè¢</div>
          <div class="stat-content">
            <span class="stat-label">Total Partenaires</span>
            <span class="stat-value"><%= items.length %></span>
          </div>
        </div>
        <div class="stat-card">
          <div class="stat-icon">‚úì</div>
          <div class="stat-content">
            <span class="stat-label">Actifs</span>
            <span class="stat-value"><%= items.length %></span>
          </div>
        </div>
        <div class="stat-card">
          <div class="stat-icon">üìä</div>
          <div class="stat-content">
            <span class="stat-label">Avec Notes</span>
            <span class="stat-value"><%= items.filter(i => i.description).length %></span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="partners-container">
    
    <!-- Search Bar -->
    <div class="search-section">
      <div class="search-wrapper">
        <svg class="search-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="11" cy="11" r="8"></circle>
          <path d="m21 21-4.35-4.35"></path>
        </svg>
        <input type="text" id="searchInput" class="search-input" placeholder="Rechercher un partenaire..." />
      </div>
    </div>

    <!-- Add Form (Only if authenticated) -->
    <% if (user) { %>
      <div class="add-section">
        <div class="add-card">
          <div class="add-header">
            <div class="add-icon">
              <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M12 5v14M5 12h14"></path>
              </svg>
            </div>
            <div>
              <h3 class="add-title">Nouveau Partenaire</h3>
              <p class="add-subtitle">Ajouter une entreprise √† votre r√©seau</p>
            </div>
          </div>
          <form method="post" action="/employes" class="add-form">
            <% if (authToken) { %>
              <input type="hidden" name="token" value="<%= authToken %>" />
            <% } %>
            <div class="form-group">
              <label class="form-label">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <rect x="2" y="7" width="20" height="14" rx="2" ry="2"></rect>
                  <path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"></path>
                </svg>
                Nom de l'entreprise
              </label>
              <input 
                name="entrepriseName" 
                class="form-input" 
                placeholder="Ex: Atlas Group, Diamond Corp..." 
                required 
              />
            </div>
            <div class="form-group">
              <label class="form-label">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                  <polyline points="14 2 14 8 20 8"></polyline>
                  <line x1="16" y1="13" x2="8" y2="13"></line>
                  <line x1="16" y1="17" x2="8" y2="17"></line>
                  <polyline points="10 9 9 9 8 9"></polyline>
                </svg>
                Notes & Informations
              </label>
              <textarea 
                name="description" 
                class="form-textarea" 
                rows="4"
                placeholder="Services propos√©s, contacts cl√©s, conditions du partenariat, notes importantes..."
              ></textarea>
            </div>
            <button class="form-submit" type="submit">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M19 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11l5 5v11a2 2 0 0 1-2 2z"></path>
                <polyline points="17 21 17 13 7 13 7 21"></polyline>
                <polyline points="7 3 7 8 15 8"></polyline>
              </svg>
              <span>Enregistrer le partenaire</span>
            </button>
          </form>
        </div>
      </div>
    <% } %>

    <!-- Partners Grid -->
    <div class="partners-section">
      <div class="section-header">
        <h2 class="section-title">Tous les partenaires</h2>
        <span class="partners-count"><%= items.length %> entreprise<%= items.length > 1 ? 's' : '' %></span>
      </div>

      <% if (items.length === 0) { %>
        <div class="empty-state-modern">
          <div class="empty-icon">üè¢</div>
          <h3>Aucun partenaire enregistr√©</h3>
          <p>Commencez par ajouter votre premi√®re entreprise partenaire</p>
          <% if (!user) { %>
            <a href="/login" class="empty-cta">Se connecter pour ajouter</a>
          <% } %>
        </div>
      <% } else { %>
        <div class="partners-grid" id="partnersContainer">
          <% items.forEach((item, index) => { %>
            <article class="partner-card" data-name="<%= (item.entrepriseName || '').toLowerCase() %>">
              <div class="card-shine"></div>
              
              <div class="partner-header">
                <div class="partner-avatar">
                  <span class="avatar-text"><%= getInitials(item.entrepriseName || 'XX') %></span>
                  <div class="avatar-glow"></div>
                </div>
                <div class="partner-info">
                  <h3 class="partner-name"><%= item.entrepriseName || 'Entreprise' %></h3>
                  <span class="partner-status">
                    <span class="status-dot"></span>
                    Partenaire Actif
                  </span>
                </div>
              </div>

              <div class="partner-body">
                <% if (item.description) { %>
                  <div class="partner-description">
                    <div class="description-header">
                      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                        <polyline points="14 2 14 8 20 8"></polyline>
                        <line x1="16" y1="13" x2="8" y2="13"></line>
                        <line x1="16" y1="17" x2="8" y2="17"></line>
                      </svg>
                      <span>Informations</span>
                    </div>
                    <p class="description-text"><%- formatDescription(item.description) %></p>
                  </div>
                <% } else { %>
                  <div class="partner-empty">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <circle cx="12" cy="12" r="10"></circle>
                      <line x1="12" y1="16" x2="12" y2="12"></line>
                      <line x1="12" y1="8" x2="12.01" y2="8"></line>
                    </svg>
                    <span>Aucune information enregistr√©e</span>
                  </div>
                <% } %>
              </div>

              <% if (user) { %>
                <div class="partner-footer">
                  <div class="partner-meta">
                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <circle cx="12" cy="12" r="10"></circle>
                      <polyline points="12 6 12 12 16 14"></polyline>
                    </svg>
                    <span>Ajout√© le <%= item.createdAt ? new Date(item.createdAt).toLocaleDateString('fr-FR') : 'N/A' %></span>
                  </div>
                  <form method="post" action="/employes/<%= item._id %>/delete" class="delete-action">
                    <% if (authToken) { %>
                      <input type="hidden" name="token" value="<%= authToken %>" />
                    <% } %>
                    <button class="delete-btn" type="submit" onclick="return confirm('Supprimer ce partenaire ?')">
                      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <polyline points="3 6 5 6 21 6"></polyline>
                        <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                        <line x1="10" y1="11" x2="10" y2="17"></line>
                        <line x1="14" y1="11" x2="14" y2="17"></line>
                      </svg>
                      <span>Supprimer</span>
                    </button>
                  </form>
                </div>
              <% } %>
            </article>
          <% }); %>
        </div>
      <% } %>
    </div>

  </div>
</div>

<style>
  /* ===== BASE STYLES ===== */
  .partners-page {
    min-height: 100vh;
    padding-bottom: 80px;
    background: #000;
  }

  /* ===== HERO SECTION ===== */
  .partners-hero {
    position: relative;
    padding: 100px 20px 80px;
    text-align: center;
    overflow: hidden;
  }

  .hero-glow {
    position: absolute;
    top: -200px;
    left: 50%;
    transform: translateX(-50%);
    width: 700px;
    height: 700px;
    background: radial-gradient(circle, rgba(74,163,255,0.05) 0%, transparent 70%);
    pointer-events: none;
    animation: pulse 4s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% { transform: translateX(-50%) scale(1); opacity: 0.2; }
    50% { transform: translateX(-50%) scale(1.05); opacity: 0.3; }
  }

  .hero-content {
    position: relative;
    z-index: 2;
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 12px;
    padding: 10px 24px;
    background: linear-gradient(135deg, rgba(74,163,255,0.1), rgba(74,163,255,0.03));
    border: 1px solid rgba(74,163,255,0.3);
    border-radius: 50px;
    margin-bottom: 30px;
    backdrop-filter: blur(10px);
    animation: fadeInDown 0.8s ease-out;
    box-shadow: 0 0 10px rgba(74,163,255,0.1);
  }

  .diamond-icon {
    color: var(--accent-blue);
    font-size: 12px;
    animation: rotate 3s linear infinite;
  }

  @keyframes rotate {
    0%, 100% { transform: rotate(0deg); }
    50% { transform: rotate(180deg); }
  }

  .badge-text {
    color: var(--accent-blue);
    font-size: 13px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 2px;
  }

  .hero-title {
    margin: 0 0 30px 0;
    display: flex;
    flex-direction: column;
    gap: 5px;
    animation: fadeInUp 1s ease-out;
  }

  .title-line {
    font-size: 52px;
    font-weight: 800;
    background: linear-gradient(135deg, #fff 0%, #e0e0e0 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    line-height: 1.1;
  }

  .title-accent {
    background: linear-gradient(135deg, var(--accent-blue) 0%, #5bb5ff 50%, var(--accent-blue) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: shimmer 3s ease-in-out infinite;
  }

  @keyframes shimmer {
    0%, 100% { filter: brightness(1); }
    50% { filter: brightness(1.3); }
  }

  .hero-description {
    font-size: 18px;
    color: var(--muted);
    margin: 0 auto 50px;
    max-width: 600px;
    line-height: 1.6;
    animation: fadeIn 1.2s ease-out;
  }

  @keyframes fadeInDown {
    from { opacity: 0; transform: translateY(-30px); }
    to { opacity: 1; transform: translateY(0); }
  }

  @keyframes fadeInUp {
    from { opacity: 0; transform: translateY(30px); }
    to { opacity: 1; transform: translateY(0); }
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  /* ===== STATS CARDS ===== */
  .hero-stats {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 20px;
    max-width: 800px;
    margin: 0 auto;
    animation: fadeIn 1.4s ease-out;
  }

  .stat-card {
    display: flex;
    align-items: center;
    gap: 15px;
    padding: 20px 25px;
    background: linear-gradient(135deg, rgba(255,255,255,0.02), rgba(255,255,255,0.01));
    border: 1px solid rgba(74,163,255,0.2);
    border-radius: 16px;
    transition: all 0.3s ease;
    box-shadow: none;
  }

  .stat-card:hover {
    transform: translateY(-5px);
    border-color: rgba(74,163,255,0.4);
    box-shadow: 0 5px 15px rgba(74,163,255,0.1);
  }

  .stat-icon {
    font-size: 32px;
    filter: grayscale(0.3);
  }

  .stat-content {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }

  .stat-label {
    font-size: 12px;
    color: var(--muted);
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 4px;
  }

  .stat-value {
    font-size: 28px;
    font-weight: 800;
    color: var(--accent-blue);
  }

  /* ===== CONTAINER ===== */
  .partners-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  /* ===== SEARCH SECTION ===== */
  .search-section {
    margin-bottom: 40px;
  }

  .search-wrapper {
    position: relative;
    max-width: 600px;
    margin: 0 auto;
  }

  .search-icon {
    position: absolute;
    left: 20px;
    top: 50%;
    transform: translateY(-50%);
    color: var(--accent-blue);
    pointer-events: none;
  }

  .search-input {
    width: 100%;
    padding: 16px 20px 16px 50px;
    background: rgba(255,255,255,0.02);
    border: 1px solid rgba(74,163,255,0.2);
    border-radius: 50px;
    color: #e9eef3;
    font-size: 15px;
    outline: none;
    transition: all 0.3s ease;
    box-sizing: border-box;
  }

  .search-input:focus {
    border-color: var(--accent-blue);
    box-shadow: 0 0 0 2px rgba(74,163,255,0.1);
    background: rgba(255,255,255,0.02);
  }

  .search-input::placeholder {
    color: rgba(255,255,255,0.3);
  }

  /* ===== ADD SECTION ===== */
  .add-section {
    margin-bottom: 50px;
  }

  .add-card {
    background: linear-gradient(135deg, rgba(74,163,255,0.05), rgba(74,163,255,0.02));
    border: 1px solid rgba(74,163,255,0.2);
    border-radius: 20px;
    padding: 35px;
    box-shadow: none;
  }

  .add-header {
    display: flex;
    align-items: center;
    gap: 20px;
    margin-bottom: 30px;
  }

  .add-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 60px;
    height: 60px;
    background: linear-gradient(135deg, rgba(74,163,255,0.2), rgba(74,163,255,0.05));
    border: 2px solid rgba(74,163,255,0.3);
    border-radius: 16px;
    color: var(--accent-blue);
    flex-shrink: 0;
  }

  .add-title {
    font-size: 24px;
    font-weight: 700;
    margin: 0 0 5px 0;
    color: #fff;
  }

  .add-subtitle {
    font-size: 14px;
    color: var(--muted);
    margin: 0;
  }

  /* ===== FORM STYLES ===== */
  .add-form, .form-group {
    display: flex;
    flex-direction: column;
  }

  .form-group {
    margin-bottom: 20px;
  }

  .form-label {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 13px;
    font-weight: 600;
    color: var(--accent-blue);
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 10px;
  }

  .form-label svg {
    color: var(--accent-blue);
  }

  .form-input,
  .form-textarea {
    padding: 14px 18px;
    background: rgba(255,255,255,0.02);
    border: 1px solid rgba(255,255,255,0.1);
    border-radius: 12px;
    color: #e9eef3;
    font-size: 15px;
    font-family: inherit;
    outline: none;
    transition: all 0.3s ease;
  }

  .form-input:focus,
  .form-textarea:focus {
    border-color: var(--accent-blue);
    box-shadow: 0 0 0 2px rgba(74,163,255,0.1);
    background: rgba(255,255,255,0.02);
  }

  .form-textarea {
    resize: vertical;
    min-height: 120px;
    line-height: 1.6;
  }

  .form-submit {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    padding: 16px 32px;
    background: linear-gradient(135deg, var(--accent-blue), #5bb5ff);
    border: none;
    border-radius: 12px;
    color: #000;
    font-size: 16px;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.3s ease;
    margin-top: 10px;
  }

  .form-submit:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(74,163,255,0.15);
  }

  .form-submit:active {
    transform: translateY(0);
  }

  /* ===== PARTNERS SECTION ===== */
  .partners-section {
    margin-top: 30px;
  }

  .section-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 30px;
    padding-bottom: 15px;
    border-bottom: 1px solid rgba(74,163,255,0.2);
  }

  .section-title {
    font-size: 28px;
    font-weight: 700;
    margin: 0;
    color: #fff;
  }

  .partners-count {
    padding: 6px 16px;
    background: rgba(74,163,255,0.1);
    border: 1px solid rgba(74,163,255,0.3);
    border-radius: 20px;
    color: var(--accent-blue);
    font-size: 14px;
    font-weight: 600;
    box-shadow: none;
  }

  /* ===== PARTNERS GRID ===== */
  .partners-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 25px;
  }

  .partner-card {
    position: relative;
    background: linear-gradient(145deg, rgba(255,255,255,0.03), rgba(255,255,255,0.01));
    border: 1px solid rgba(74,163,255,0.15);
    border-radius: 20px;
    padding: 25px;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    animation: slideInUp 0.6s ease-out both;
  }

  @keyframes slideInUp {
    from { opacity: 0; transform: translateY(30px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .partner-card:hover {
    transform: translateY(-8px);
    border-color: rgba(74,163,255,0.4);
    box-shadow: 0 10px 25px rgba(74,163,255,0.1);
  }

  .card-shine {
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: linear-gradient(45deg, transparent 40%, rgba(74,163,255,0.03) 50%, transparent 60%);
    transform: rotate(45deg);
    animation: shine 8s ease-in-out infinite;
  }

  @keyframes shine {
    0%, 100% { transform: translateX(-100%) translateY(-100%) rotate(45deg); }
    50% { transform: translateX(100%) translateY(100%) rotate(45deg); }
  }

  /* ===== PARTNER HEADER ===== */
  .partner-header {
    display: flex;
    align-items: center;
    gap: 15px;
    margin-bottom: 20px;
    position: relative;
    z-index: 1;
  }

  .partner-avatar {
    position: relative;
    width: 60px;
    height: 60px;
    background: linear-gradient(135deg, rgba(74,163,255,0.2), rgba(74,163,255,0.05));
    border: 2px solid rgba(74,163,255,0.3);
    border-radius: 14px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .avatar-text {
    font-size: 20px;
    font-weight: 700;
    color: var(--accent-blue);
    z-index: 2;
    position: relative;
  }

  .avatar-glow {
    position: absolute;
    inset: -5px;
    background: radial-gradient(circle, rgba(74,163,255,0.1) 0%, transparent 70%);
    border-radius: 14px;
    animation: pulse-glow 3s ease-in-out infinite;
  }

  @keyframes pulse-glow {
    0%, 100% { opacity: 0.2; transform: scale(1); }
    50% { opacity: 0.4; transform: scale(1.05); }
  }

  .partner-info {
    flex: 1;
  }

  .partner-name {
    font-size: 20px;
    font-weight: 700;
    margin: 0 0 5px 0;
    color: #fff;
  }

  .partner-status {
    display: flex;
    align-items: center;
    gap: 6px;
    font-size: 12px;
    color: var(--muted);
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .status-dot {
    width: 8px;
    height: 8px;
    background: #4ade80;
    border-radius: 50%;
    animation: pulse-dot 2s ease-in-out infinite;
  }

  @keyframes pulse-dot {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }

  /* ===== PARTNER BODY ===== */
  .partner-body {
    position: relative;
    z-index: 1;
    margin-bottom: 15px;
  }

  .partner-description {
    padding: 15px;
    background: rgba(255,255,255,0.02);
    border-left: 3px solid var(--accent-blue);
    border-radius: 8px;
  }

  .description-header {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 10px;
    color: var(--accent-blue);
    font-size: 12px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .description-text {
    margin: 0;
    color: #e9eef3;
    font-size: 14px;
    line-height: 1.7;
  }

  .partner-empty {
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 15px;
    background: rgba(255,255,255,0.01);
    border: 1px dashed rgba(255,255,255,0.1);
    border-radius: 8px;
