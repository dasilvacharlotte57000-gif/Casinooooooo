<%- include('partials/header') %>
<%- include('partials/nav') %>

<% const formatDescription = (text) => (text || "").replace(/\n/g, "<br>"); %>

<div class="container page-shell">
  <div class="page-toolbar">
    <input type="text" class="page-search-input" placeholder="Rechercher..." />
    <button class="page-search-btn" type="button">üîç</button>
  </div>
  <div class="page-header">
    <h1>üë• Partenariat Employ√©s</h1>
    <p>Centralise les entreprises partenaires, les contacts cles et les notes utiles.</p>
  </div>

  <!-- Formulaire d'ajout (uniquement connect√©) -->
  <% if (user) { %>
    <div class="card wide add-form">
      <h3>‚ûï Ajouter une entreprise partenaire</h3>
      <form method="post" action="/employes">
        <% if (authToken) { %>
          <input type="hidden" name="token" value="<%= authToken %>" />
        <% } %>
        <input name="entrepriseName" placeholder="Nom de l'entreprise (ex: Atlas Group)" required />
        <textarea name="description" placeholder="Notes internes, services, conditions, points de contact, etc."></textarea>
        <button class="btn btn-add" type="submit">Enregistrer</button>
      </form>
    </div>
  <% } %>

  <!-- Liste des employ√©s/partenaires -->
  <div class="list-section">
    <div class="list-header">
      <h3>Partenaires actifs</h3>
      <span class="badge"><%= items.length %></span>
    </div>
    <div class="partner-stack">
      <% if (items.length === 0) { %>
        <p class="empty-state">üì≠ Aucun partenaire pour le moment. Ajoute le premier pour demarrer le suivi.</p>
      <% } else { %>
        <% items.forEach(item => { %>
          <article class="partner-card">
            <div class="partner-card__body">
              <div class="partner-card__head">
                <div>
                  <h4><%= item.entrepriseName || 'Entreprise' %></h4>
                  <p class="partner-sub">Partenaire actif</p>
                </div>
                <% if (user) { %>
                  <form method="post" action="/employes/<%= item._id %>/delete">
                    <% if (authToken) { %>
                      <input type="hidden" name="token" value="<%= authToken %>" />
                    <% } %>
                    <button class="btn-delete" type="submit" title="Supprimer">üóëÔ∏è</button>
                  </form>
                <% } %>
              </div>
              <% if (item.description) { %>
                <div class="partner-notes">
                  <span>üìù Notes</span>
                  <p><%- formatDescription(item.description) %></p>
                </div>
              <% } else { %>
                <div class="partner-notes empty">Aucune note pour le moment.</div>
              <% } %>
            </div>
          </article>
        <% }); %>
      <% } %>
    </div>
  </div>

</div>

<style>
.page-header {
  margin-bottom: 32px;
  text-align: center;
  border-bottom: 2px solid rgba(255, 215, 0, 0.18);
  padding-bottom: 18px;
}
.page-header h1 {
  margin: 0 0 10px 0;
  color: var(--accent);
  font-size: 38px;
  letter-spacing: 1px;
}
.page-header p {
  color: var(--muted);
  margin: 0;
}
.add-form {
  background: rgba(255, 215, 0, 0.10);
  border: 1px solid rgba(255, 215, 0, 0.22);
  margin-bottom: 32px;
  box-shadow: 0 4px 18px rgba(255,215,0,0.08);
}
.add-form h3 {
  color: var(--accent);
  margin-top: 0;
  font-size: 22px;
}
.btn-add {
  background: linear-gradient(135deg, var(--accent), var(--accent-strong));
  color: #000;
  font-weight: bold;
  padding: 13px 22px;
  border-radius: 10px;
  font-size: 16px;
  box-shadow: 0 2px 8px rgba(255,215,0,0.08);
}
.btn-add:hover {
  transform: scale(1.04);
  box-shadow: 0 6px 18px rgba(255,215,0,0.18);
}
.list-section {
  margin-top: 32px;
  padding: 20px;
  border-radius: 16px;
  background: rgba(0, 0, 0, 0.6);
  border: 1px solid rgba(255, 215, 0, 0.35);
  box-shadow: 0 0 24px rgba(255, 215, 0, 0.2);
}
.list-header {
  margin-bottom: 28px;
  padding-bottom: 14px;
  border-bottom: 1px solid rgba(255, 215, 0, 0.18);
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.list-header h3 {
  margin: 0;
  color: var(--accent);
  display: flex;
  align-items: center;
  gap: 10px;
  font-size: 20px;
}
.badge {
  background: rgba(255, 215, 0, 0.13);
  color: var(--accent);
  padding: 2px 10px;
  border-radius: 20px;
  font-size: 15px;
  font-weight: bold;
}
.partner-stack {
  display: grid;
  gap: 14px;
}

.partner-card {
  display: grid;
  grid-template-columns: 1fr;
  gap: 16px;
  padding: 18px 20px;
  border-radius: 16px;
  border: 1px solid rgba(255, 215, 0, 0.35);
  background: rgba(0, 0, 0, 0.7);
  box-shadow: inset 0 0 14px rgba(255, 215, 0, 0.12);
}

.partner-card__head {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12px;
  margin-bottom: 8px;
}

.partner-card__head h4 {
  margin: 0;
  color: #e9eef3;
  font-size: 19px;
}

.partner-sub {
  margin: 4px 0 0;
  color: rgba(255, 255, 255, 0.55);
  font-size: 12px;
  text-transform: uppercase;
  letter-spacing: 0.08em;
}

.partner-notes {
  border-top: 1px solid rgba(255, 215, 0, 0.18);
  padding-top: 10px;
  color: var(--muted);
  font-size: 15px;
  line-height: 1.6;
}

.partner-notes span {
  display: inline-block;
  margin-bottom: 6px;
  color: #ffd700;
  font-size: 12px;
  letter-spacing: 0.06em;
  text-transform: uppercase;
}

.partner-notes.empty {
  color: rgba(255, 255, 255, 0.5);
  font-style: italic;
}

.btn-delete {
  background: rgba(255, 107, 107, 0.2);
  border: 1px solid rgba(255, 107, 107, 0.3);
  color: #ff6b6b;
  padding: 8px 12px;
  border-radius: 6px;
  cursor: pointer;
  transition: all 0.2s;
  font-size: 16px;
}

.btn-delete:hover {
  background: rgba(255, 107, 107, 0.3);
  border-color: #ff6b6b;
}

@media (max-width: 720px) {
  .partner-card {
    grid-template-columns: 1fr;
  }
}
.empty-state {
  text-align: center;
  color: var(--muted);
  padding: 44px;
  grid-column: 1 / -1;
  font-size: 18px;
}
.login-cta {
  background: rgba(255, 215, 0, 0.10);
  border: 2px solid rgba(255, 215, 0, 0.22);
  border-radius: 14px;
  padding: 32px;
  text-align: center;
  margin-top: 32px;
  box-shadow: 0 2px 12px rgba(255,215,0,0.07);
}
.login-cta p {
  color: var(--muted);
  margin: 0 0 15px 0;
  font-size: 16px;
}
.btn-primary {
  background: linear-gradient(135deg, var(--accent), var(--accent-strong));
  color: #000;
  padding: 12px 28px;
  border-radius: 10px;
  font-weight: bold;
  font-size: 16px;
}
.btn-primary:hover {
  transform: scale(1.05);
}
</style>

<script>
// reserved
</script>

<%- include('partials/footer') %>

</body></html>