<%- include('partials/header') %>
<%- include('partials/nav') %>

<div class="container page-shell">
  <div class="page-toolbar">
    <input type="text" class="page-search-input" placeholder="Rechercher..." />
    <button class="page-search-btn" type="button">üîç</button>
  </div>
  <div class="page-header">
    <h1>üë• Partenariat Employ√©s</h1>
    <p>Gestion des employ√©s et partenaires du casino</p>
  </div>

  <!-- Formulaire d'ajout (uniquement connect√©) -->
  <% if (user) { %>
    <div class="card wide add-form">
      <h3>‚ûï Ajouter un employ√©/partenaire</h3>
      <form method="post" action="/employes" enctype="multipart/form-data">
        <div class="row">
          <input name="prenom" placeholder="Pr√©nom" required />
          <input name="nom" placeholder="Nom" required />
        </div>
        <input name="grade" placeholder="Grade/Poste (ex: Manager, Partenaire...)" />
        <input name="dateEmbauche" type="date" placeholder="Date d'embauche/partenariat" />
        <input name="photo" type="file" accept="image/*" placeholder="Photo (optionnel)" />
        <button class="btn btn-add" type="submit">Ajouter</button>
      </form>
    </div>
  <% } %>

  <!-- Liste des employ√©s/partenaires -->
  <div class="list-section">
    <div class="list-header">
      <h3>Partenariat Employ√©s (<span class="badge"><%= items.length %></span>)</h3>
    </div>
    <div class="list employee-grid">
      <% if (items.length === 0) { %>
        <p class="empty-state">üì≠ Aucun employ√©/partenaire enregistr√©</p>
      <% } else { %>
        <% items.forEach(item => { %>
          <div class="employee-card">
            <div class="employee-photo-container">
              <% if (item.photoUrl) { %>
                <img src="<%= item.photoUrl %>" alt="<%= item.prenom %> <%= item.nom %>" class="employee-photo" />
              <% } else { %>
                <div class="employee-placeholder">üë§</div>
              <% } %>
            </div>
            <div class="card-content">
              <h4><%= item.prenom %> <%= item.nom %></h4>
              <% if (item.grade) { %><p class="info-item">üíº <%= item.grade %></p><% } %>
              <% if (item.dateEmbauche) { %><p class="info-item">üìÖ <%= new Date(item.dateEmbauche).toLocaleDateString('fr-FR') %></p><% } %>
              <% if (user) { %>
                <form method="post" action="/employes/<%= item._id %>/delete" class="delete-btn-container">
                  <button class="btn-delete" type="submit">üóëÔ∏è Supprimer</button>
                </form>
              <% } %>
            </div>
          </div>
        <% }); %>
      <% } %>
    </div>
  </div>

</div>

<style>
.page-header {
  margin-bottom: 32px;
  text-align: center;
  border-bottom: 2px solid rgba(255, 215, 0, 0.18);
  padding-bottom: 18px;
}
.page-header h1 {
  margin: 0 0 10px 0;
  color: var(--accent);
  font-size: 38px;
  letter-spacing: 1px;
}
.page-header p {
  color: var(--muted);
  margin: 0;
}
.add-form {
  background: rgba(255, 215, 0, 0.10);
  border: 1px solid rgba(255, 215, 0, 0.22);
  margin-bottom: 32px;
  box-shadow: 0 4px 18px rgba(255,215,0,0.08);
}
.add-form h3 {
  color: var(--accent);
  margin-top: 0;
  font-size: 22px;
}
.btn-add {
  background: linear-gradient(135deg, var(--accent), var(--accent-strong));
  color: #000;
  font-weight: bold;
  padding: 13px 22px;
  border-radius: 10px;
  font-size: 16px;
  box-shadow: 0 2px 8px rgba(255,215,0,0.08);
}
.btn-add:hover {
  transform: scale(1.04);
  box-shadow: 0 6px 18px rgba(255,215,0,0.18);
}
.list-section {
  margin-top: 32px;
}
.list-header {
  margin-bottom: 28px;
  padding-bottom: 14px;
  border-bottom: 1px solid rgba(255, 215, 0, 0.18);
}
.list-header h3 {
  margin: 0;
  color: var(--accent);
  display: flex;
  align-items: center;
  gap: 10px;
  font-size: 20px;
}
.badge {
  background: rgba(255, 215, 0, 0.13);
  color: var(--accent);
  padding: 2px 10px;
  border-radius: 20px;
  font-size: 15px;
  font-weight: bold;
}
.employee-grid {
  display: grid !important;
  grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
  gap: 24px;
  align-items: start;
}
.employee-card {
  background: rgba(255, 215, 0, 0.07);
  border: 1px solid rgba(255, 215, 0, 0.13);
  border-radius: 16px;
  overflow: hidden;
  transition: all 0.3s ease;
  display: flex;
  flex-direction: column;
  height: 100%;
  box-shadow: 0 2px 12px rgba(255,215,0,0.07);
}
.employee-card:hover {
  background: rgba(255, 215, 0, 0.13);
  border-color: rgba(255, 215, 0, 0.22);
  transform: translateY(-6px);
  box-shadow: 0 10px 30px rgba(255,215,0,0.13);
}
.employee-photo-container {
  width: 100%;
  height: 180px;
  overflow: hidden;
  background: rgba(255, 215, 0, 0.13);
}
.employee-photo {
  width: 100%;
  height: 100%;
  object-fit: cover;
}
.employee-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60px;
  background: rgba(255, 215, 0, 0.10);
}
.card-content {
  padding: 18px;
  flex: 1;
  display: flex;
  flex-direction: column;
}
.card-content h4 {
  margin: 0 0 12px 0;
  color: #e9eef3;
  font-size: 18px;
}
.info-item {
  margin: 10px 0;
  color: var(--muted);
  font-size: 15px;
}
.delete-btn-container {
  margin-top: auto;
  max-height: 0;
  overflow: hidden;
  opacity: 0;
  transition: max-height 0.25s ease, opacity 0.25s ease;
}
.employee-card.show-actions .delete-btn-container {
  max-height: 80px;
  opacity: 1;
}
.btn-delete {
  width: 100%;
  background: rgba(255, 107, 107, 0.18);
  border: 1px solid rgba(255, 107, 107, 0.22);
  color: var(--danger);
  padding: 10px;
  border-radius: 10px;
  cursor: pointer;
  transition: background 0.2s, border-color 0.2s;
  margin-top: 12px;
  font-size: 15px;
}
.btn-delete:hover {
  background: rgba(255, 107, 107, 0.28);
  border-color: #ff6b6b;
}
.empty-state {
  text-align: center;
  color: var(--muted);
  padding: 44px;
  grid-column: 1 / -1;
  font-size: 18px;
}
.login-cta {
  background: rgba(255, 215, 0, 0.10);
  border: 2px solid rgba(255, 215, 0, 0.22);
  border-radius: 14px;
  padding: 32px;
  text-align: center;
  margin-top: 32px;
  box-shadow: 0 2px 12px rgba(255,215,0,0.07);
}
.login-cta p {
  color: var(--muted);
  margin: 0 0 15px 0;
  font-size: 16px;
}
.btn-primary {
  background: linear-gradient(135deg, var(--accent), var(--accent-strong));
  color: #000;
  padding: 12px 28px;
  border-radius: 10px;
  font-weight: bold;
  font-size: 16px;
}
.btn-primary:hover {
  transform: scale(1.05);
}
</style>

<script>
// Toggle actions (supprimer) when clicking on a card
document.addEventListener('click', function (e) {
  const card = e.target.closest('.employee-card');
  if (!card) return;
  // don't toggle when clicking on interactive elements inside the card
  if (e.target.closest('form') || e.target.closest('button') || e.target.tagName === 'A' || e.target.tagName === 'INPUT') return;
  card.classList.toggle('show-actions');
});
</script>

<%- include('partials/footer') %>

</body></html>