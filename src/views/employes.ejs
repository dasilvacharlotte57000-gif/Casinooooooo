<%- include('partials/header') %>
<%- include('partials/nav') %>

<div class="container">
  <div class="page-header">
    <h1>üë• Partenariat Employ√©s</h1>
    <p>Gestion des employ√©s et partenaires du casino</p>
  </div>

  <!-- Formulaire d'ajout (uniquement connect√©) -->
  <% if (user) { %>
    <div class="card wide add-form">
      <h3>‚ûï Ajouter un employ√©/partenaire</h3>
      <form method="post" action="/employes" enctype="multipart/form-data">
        <div class="row">
          <input name="prenom" placeholder="Pr√©nom" required />
          <input name="nom" placeholder="Nom" required />
        </div>
        <input name="grade" placeholder="Grade/Poste (ex: Manager, Partenaire...)" />
        <input name="dateEmbauche" type="date" placeholder="Date d'embauche/partenariat" />
        <input name="photo" type="file" accept="image/*" placeholder="Photo (optionnel)" />
        <button class="btn btn-add" type="submit">Ajouter</button>
      </form>
    </div>
  <% } %>

  <!-- Liste des employ√©s/partenaires -->
  <div class="list-section">
    <div class="list-header">
      <h3>Partenariat Employ√©s (<span class="badge"><%= items.length %></span>)</h3>
    </div>
    <div class="list employee-grid">
      <% if (items.length === 0) { %>
        <p class="empty-state">üì≠ Aucun employ√©/partenaire enregistr√©</p>
      <% } else { %>
        <% items.forEach(item => { %>
          <div class="employee-card">
            <div class="employee-photo-container">
              <% if (item.photoUrl) { %>
                <img src="<%= item.photoUrl %>" alt="<%= item.prenom %> <%= item.nom %>" class="employee-photo" />
              <% } else { %>
                <div class="employee-placeholder">üë§</div>
              <% } %>
            </div>
            <div class="card-content">
              <h4><%= item.prenom %> <%= item.nom %></h4>
              <% if (item.grade) { %><p class="info-item">üíº <%= item.grade %></p><% } %>
              <% if (item.dateEmbauche) { %><p class="info-item">üìÖ <%= new Date(item.dateEmbauche).toLocaleDateString('fr-FR') %></p><% } %>
              <% if (user) { %>
                <form method="post" action="/employes/<%= item._id %>/delete" class="delete-btn-container">
                  <button class="btn-delete" type="submit">üóëÔ∏è Supprimer</button>
                </form>
              <% } %>
            </div>
          </div>
        <% }); %>
      <% } %>
    </div>
  </div>

  <!-- Message pour utilisateurs d√©connect√©s -->
  <% if (!user) { %>
    <div class="login-cta">
      <p>‚ú® Connectez-vous pour g√©rer les partenariats Employ√©s</p>
      <a href="/login" class="btn btn-primary">Se connecter</a>
    </div>
  <% } %>
</div>

<style>
.page-header {
  margin-bottom: 30px;
  text-align: center;
  border-bottom: 2px solid rgba(255, 215, 0, 0.2);
  padding-bottom: 20px;
}

.page-header h1 {
  margin: 0 0 10px 0;
  color: var(--accent, #ffd700);
  font-size: 36px;
}

.page-header p {
  color: var(--muted, #bdbdbd);
  margin: 0;
}

.add-form {
  background: rgba(255, 215, 0, 0.08);
  border: 1px solid rgba(255, 215, 0, 0.25);
  margin-bottom: 30px;
}

.add-form h3 {
  color: var(--accent, #ffd700);
  margin-top: 0;
}

.btn-add {
  background: linear-gradient(135deg, var(--accent, #ffd700), var(--accent-strong, #ffed4e));
  color: #000;
  font-weight: bold;
  padding: 12px 20px;
}

.btn-add:hover {
  transform: scale(1.02);
}

.list-section {
  margin-top: 30px;
}

.list-header {
  margin-bottom: 25px;
  padding-bottom: 15px;
  border-bottom: 1px solid rgba(255, 215, 0, 0.2);
}

.list-header h3 {
  margin: 0;
  color: var(--accent, #ffd700);
  display: flex;
  align-items: center;
  gap: 10px;
}

.badge {
  background: rgba(255, 215, 0, 0.1);
  color: var(--accent, #ffd700);
  padding: 2px 8px;
  border-radius: 20px;
  font-size: 14px;
  font-weight: bold;
}

.employee-grid {
  display: grid !important;
  grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
  gap: 20px;
  flex-direction: initial !important;
}

.employee-card {
  background: rgba(255, 215, 0, 0.05);
  border: 1px solid rgba(255, 215, 0, 0.15);
  border-radius: 12px;
  overflow: hidden;
  transition: all 0.3s ease;
  display: flex;
  flex-direction: column;
}

.employee-card:hover {
  background: rgba(255, 215, 0, 0.08);
  border-color: rgba(255, 215, 0, 0.3);
  transform: translateY(-5px);
}

.employee-photo-container {
  width: 100%;
  height: 180px;
  overflow: hidden;
  background: rgba(255, 215, 0, 0.1);
}

.employee-photo {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.employee-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60px;
  background: rgba(255, 215, 0, 0.08);
}

.card-content {
  padding: 16px;
  flex: 1;
  display: flex;
  flex-direction: column;
}

.card-content h4 {
  margin: 0 0 12px 0;
  color: #e9eef3;
  font-size: 16px;
}

.info-item {
  margin: 4px 0;
  color: var(--muted, #bdbdbd);
  font-size: 13px;
}

.delete-btn-container {
.delete-btn-container {
  margin-top: auto;
  max-height: 0;
  overflow: hidden;
  opacity: 0;
  transition: max-height 0.25s ease, opacity 0.25s ease;
}

.employee-card.show-actions .delete-btn-container {
  max-height: 80px;
  opacity: 1;
}

.btn-delete {
  width: 100%;
  background: rgba(255, 107, 107, 0.15);
  border: 1px solid rgba(255, 107, 107, 0.25);
  color: var(--danger, #ff6b6b);
  padding: 8px;
  border-radius: 6px;
  cursor: pointer;
  transition: background 0.2s, border-color 0.2s;
  margin-top: 10px;
}

.btn-delete:hover {
  background: rgba(255, 107, 107, 0.3);
  border-color: #ff6b6b;
}

.empty-state {
  text-align: center;
  color: var(--muted, #bdbdbd);
  padding: 40px;
  grid-column: 1 / -1;
}

.login-cta {
  background: rgba(255, 215, 0, 0.08);
  border: 2px solid rgba(255, 215, 0, 0.3);
  border-radius: 12px;
  padding: 30px;
  text-align: center;
  margin-top: 30px;
}

.login-cta p {
  color: var(--muted, #bdbdbd);
  margin: 0 0 15px 0;
}

.btn-primary {
  background: linear-gradient(135deg, var(--accent, #ffd700), var(--accent-strong, #ffed4e));
  color: #000;
  padding: 10px 25px;
  border-radius: 6px;
  font-weight: bold;
}

.btn-primary:hover {
  transform: scale(1.05);
}
</style>

<script>
// Toggle actions (supprimer) when clicking on a card
document.addEventListener('click', function (e) {
  const card = e.target.closest('.employee-card');
  if (!card) return;
  // don't toggle when clicking on interactive elements inside the card
  if (e.target.closest('form') || e.target.closest('button') || e.target.tagName === 'A' || e.target.tagName === 'INPUT') return;
  card.classList.toggle('show-actions');
});
</script>

</body></html>
