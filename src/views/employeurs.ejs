<%- include('partials/nav') %>

<div class="container page-shell">
  <!-- Barre de recherche -->
  <div class="page-toolbar">
    <form method="get" action="/employeurs" class="search-filter-form">
      <input type="text" name="search" class="page-search-input" placeholder="Rechercher par nom ou pr√©nom..." value="<%= filters?.search || '' %>" />
      <button class="page-search-btn" type="submit">üîç</button>
      <% if (filters?.search) { %>
        <a href="/employeurs" class="btn-reset">‚úñ R√©initialiser</a>
      <% } %>
    </form>
  </div>

  <!-- En-t√™te avec statistiques -->
  <div class="page-header">
    <h1>üßë‚Äçüíº Employeurs</h1>
    <p>Gestion des employeurs internes</p>
    <% if (stats) { %>
      <div class="stats-bar">
        <div class="stat-item">
          <div class="stat-value"><%= stats.total %></div>
          <div class="stat-label">Total</div>
        </div>
        <% if (stats.parGrade) { %>
          <% Object.entries(stats.parGrade).slice(0, 5).forEach(([grade, count]) => { %>
            <div class="stat-item stat-info">
              <div class="stat-value"><%= count %></div>
              <div class="stat-label"><%= grade %></div>
            </div>
          <% }); %>
        <% } %>
      </div>
    <% } %>
  </div>

  <!-- Formulaire d'ajout -->
  <% if (user) { %>
    <div class="card wide add-form">
      <h3>‚ûï Ajouter un employeur</h3>
      <form method="post" action="/employeurs">
        <% if (authToken) { %>
          <input type="hidden" name="token" value="<%= authToken %>" />
        <% } %>
        <div class="form-grid">
          <div class="form-group">
            <label>Pr√©nom *</label>
            <input name="prenom" placeholder="Pr√©nom" required />
          </div>
          <div class="form-group">
            <label>Nom *</label>
            <input name="nom" placeholder="Nom" required />
          </div>
          <div class="form-group">
            <label>Grade</label>
            <select name="grade">
              <option value="">-- S√©lectionner --</option>
              <option value="Manager">Manager</option>
              <option value="Responsable S√©curit√©">Responsable S√©curit√©</option>
              <option value="Chef d'√âquipe">Chef d'√âquipe</option>
              <option value="Directeur">Directeur</option>
              <option value="Cadre Sup√©rieur">Cadre Sup√©rieur</option>
              <option value="Autre">Autre</option>
            </select>
          </div>
          <div class="form-group">
            <label>URL de la photo</label>
            <input name="photoUrl" placeholder="https://..." />
          </div>
        </div>
        <button class="btn btn-add" type="submit">‚úÖ Ajouter l'employeur</button>
      </form>
    </div>
  <% } %>

  <!-- Liste des employeurs -->
  <div class="list-section">
    <div class="list-header">
      <h3>Employeurs (<span class="badge"><%= items.length %></span>)</h3>
    </div>
    <div class="list employee-grid">
      <% if (items.length === 0) { %>
        <p class="empty-state">üì≠ Aucun employeur trouv√©</p>
      <% } else { %>
        <% items.forEach(item => { %>
          <div class="employee-card" data-id="<%= item._id %>">
            <!-- Photo -->
            <div class="employee-photo-container">
              <% if (item.photoUrl) { %>
                <img src="<%= item.photoUrl %>" alt="<%= item.prenom %> <%= item.nom %>" class="employee-photo" onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';" />
                <div class="employee-placeholder" style="display: none;">üßë‚Äçüíº</div>
              <% } else { %>
                <div class="employee-placeholder">üßë‚Äçüíº</div>
              <% } %>
            </div>

            <!-- Contenu -->
            <div class="card-content">
              <h4><%= item.prenom %> <%= item.nom %></h4>
              
              <% if (item.grade) { %>
                <p class="info-item grade-badge">‚≠ê <%= item.grade %></p>
              <% } %>

              <!-- Actions (visible au survol) -->
              <% if (user) { %>
                <div class="action-buttons">
                  <button class="btn-edit" onclick="openEditModal('<%= item._id %>')">‚úèÔ∏è Modifier</button>
                  <form method="post" action="/employeurs/<%= item._id %>/delete" style="display: inline;">
                    <% if (authToken) { %>
                      <input type="hidden" name="token" value="<%= authToken %>" />
                    <% } %>
                    <button class="btn-delete" type="submit" onclick="return confirm('Voulez-vous vraiment supprimer cet employeur ?')">üóëÔ∏è Supprimer</button>
                  </form>
                </div>
              <% } %>
            </div>
          </div>
        <% }); %>
      <% } %>
    </div>
  </div>
</div>

<!-- Modal d'√©dition -->
<% if (user) { %>
  <div id="editModal" class="modal">
    <div class="modal-content">
      <span class="modal-close" onclick="closeEditModal()">&times;</span>
      <h2>‚úèÔ∏è Modifier l'employeur</h2>
      <form id="editForm" method="post">
        <% if (authToken) { %>
          <input type="hidden" name="token" value="<%= authToken %>" />
        <% } %>
        <div class="form-grid">
          <div class="form-group">
            <label>Pr√©nom *</label>
            <input name="prenom" id="edit_prenom" required />
          </div>
          <div class="form-group">
            <label>Nom *</label>
            <input name="nom" id="edit_nom" required />
          </div>
          <div class="form-group">
            <label>Grade</label>
            <select name="grade" id="edit_grade">
              <option value="">-- S√©lectionner --</option>
              <option value="Manager">Manager</option>
              <option value="Responsable S√©curit√©">Responsable S√©curit√©</option>
              <option value="Adjoint de direction">Adjoint de direction</option>
              <option value="Co directrice">Co directrice</option>
              <option value="Directeur">Directeur</option>
              <option value="Autre">Autre</option>
            </select>
          </div>
          <div class="form-group">
            <label>URL de la photo</label>
            <input name="photoUrl" id="edit_photoUrl" />
          </div>
        </div>
        <div class="modal-actions">
          <button type="button" class="btn-cancel" onclick="closeEditModal()">Annuler</button>
          <button type="submit" class="btn btn-add">üíæ Enregistrer</button>
        </div>
      </form>
    </div>
  </div>
<% } %>

<script>
// Ouvrir le modal d'√©dition
async function openEditModal(id) {
  try {
    const response = await fetch(`/employeurs/${id}`);
    const data = await response.json();
    
    // Remplir le formulaire
    document.getElementById('edit_prenom').value = data.prenom || '';
    document.getElementById('edit_nom').value = data.nom || '';
    document.getElementById('edit_grade').value = data.grade || '';
    document.getElementById('edit_photoUrl').value = data.photoUrl || '';
    
    // D√©finir l'action du formulaire
    document.getElementById('editForm').action = `/employeurs/${id}/update`;
    
    // Afficher le modal
    document.getElementById('editModal').style.display = 'block';
  } catch (error) {
    console.error('Erreur:', error);
    alert('Erreur lors du chargement des donn√©es');
  }
}

// Fermer le modal
function closeEditModal() {
  document.getElementById('editModal').style.display = 'none';
}

// Fermer le modal en cliquant en dehors
window.onclick = function(event) {
  const modal = document.getElementById('editModal');
  if (event.target === modal) {
    closeEditModal();
  }
}
</script>

