<%- include('partials/header') %>
<%- include('partials/nav') %>

<div class="container">
  <div class="page-header">
    <h1>üßë‚Äçüíº Employeurs</h1>
    <p>Liste des employeurs internes et date d'entree</p>
  </div>

  <% if (user) { %>
    <div class="card wide add-form">
      <h3>‚ûï Ajouter un employeur</h3>
      <form method="post" action="/employeurs">
        <div class="row">
          <input name="prenom" placeholder="Prenom" required />
          <input name="nom" placeholder="Nom" required />
        </div>
        <div class="row">
          <input name="dateEntree" type="date" placeholder="Date d'entree" />
          <input name="photoUrl" placeholder="URL de la photo (collez ici)" />
        </div>
        <button class="btn btn-add" type="submit">Ajouter</button>
      </form>
    </div>
  <% } %>

  <div class="list-section">
    <div class="list-header">
      <h3>Employeurs (<span class="badge"><%= items.length %></span>)</h3>
    </div>
    <div class="list employee-grid">
      <% if (items.length === 0) { %>
        <p class="empty-state">üì≠ Aucun employeur enregistre</p>
      <% } else { %>
        <% items.forEach(item => { %>
          <div class="employee-card">
            <div class="employee-photo-container">
              <% if (item.photoUrl) { %>
                <img src="<%= item.photoUrl %>" alt="<%= item.prenom %> <%= item.nom %>" class="employee-photo" />
              <% } else { %>
                <div class="employee-placeholder">üßë‚Äçüíº</div>
              <% } %>
            </div>
            <div class="card-content">
              <h4><%= item.prenom %> <%= item.nom %></h4>
              <% if (item.dateEntree) { %>
                <p class="info-item">üìÖ Depuis le <%= new Date(item.dateEntree).toLocaleDateString('fr-FR') %></p>
              <% } %>
              <% if (user) { %>
                <form method="post" action="/employeurs/<%= item._id %>/delete" class="delete-btn-container">
                  <button class="btn-delete" type="submit">üóëÔ∏è Supprimer</button>
                </form>
              <% } %>
            </div>
          </div>
        <% }); %>
      <% } %>
    </div>
  </div>

  <% if (!user) { %>
    <div class="login-cta">
      <p>‚ú® Connectez-vous pour gerer les employeurs</p>
      <a href="/login" class="btn btn-primary">Se connecter</a>
    </div>
  <% } %>
</div>

<style>
.page-header {
  margin-bottom: 30px;
  text-align: center;
  border-bottom: 2px solid rgba(255, 215, 0, 0.2);
  padding-bottom: 20px;
}

.page-header h1 {
  margin: 0 0 10px 0;
  color: #ffd700;
  font-size: 36px;
}

.page-header p {
  color: #bdbdbd;
  margin: 0;
}

.add-form {
  background: rgba(255, 215, 0, 0.08);
  border: 1px solid rgba(255, 215, 0, 0.25);
  margin-bottom: 30px;
}

.add-form h3 {
  color: #ffd700;
  margin-top: 0;
}

.btn-add {
  background: linear-gradient(135deg, #ffd700, #ffed4e);
  color: #000;
  font-weight: bold;
  padding: 12px 20px;
}

.btn-add:hover {
  transform: scale(1.02);
}

.list-section {
  margin-top: 30px;
}

.list-header {
  margin-bottom: 25px;
  padding-bottom: 15px;
  border-bottom: 1px solid rgba(255, 215, 0, 0.2);
}

.list-header h3 {
  margin: 0;
  color: #ffd700;
  display: flex;
  align-items: center;
  gap: 10px;
}

.badge {
  background: rgba(255, 215, 0, 0.2);
  color: #ffd700;
  padding: 2px 8px;
  border-radius: 20px;
  font-size: 14px;
  font-weight: bold;
}

.employee-grid {
  display: grid !important;
  grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
  gap: 20px;
  flex-direction: initial !important;
}

.employee-card {
  background: rgba(255, 215, 0, 0.05);
  border: 1px solid rgba(255, 215, 0, 0.15);
  border-radius: 12px;
  overflow: hidden;
  transition: all 0.3s ease;
  display: flex;
  flex-direction: column;
}

.employee-card:hover {
  background: rgba(255, 215, 0, 0.08);
  border-color: rgba(255, 215, 0, 0.3);
  transform: translateY(-5px);
}

.employee-photo-container {
  width: 100%;
  height: 180px;
  overflow: hidden;
  background: rgba(255, 215, 0, 0.1);
}

.employee-photo {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.employee-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60px;
  background: rgba(255, 215, 0, 0.08);
}

.card-content {
  padding: 16px;
  flex: 1;
  display: flex;
  flex-direction: column;
}

.card-content h4 {
  margin: 0 0 12px 0;
  color: #fff;
  font-size: 16px;
}

.info-item {
  margin: 4px 0;
  color: #bdbdbd;
  font-size: 13px;
}

.delete-btn-container {
  margin-top: auto;
  max-height: 0;
  overflow: hidden;
  opacity: 0;
  transition: max-height 0.25s ease, opacity 0.25s ease;
}

.employee-card:hover .delete-btn-container {
  max-height: 80px;
  opacity: 1;
}

.btn-delete {
  width: 100%;
  background: rgba(255, 107, 107, 0.2);
  border: 1px solid rgba(255, 107, 107, 0.3);
  color: #ff6b6b;
  padding: 8px;
  border-radius: 6px;
  cursor: pointer;
  transition: background 0.2s, border-color 0.2s;
  margin-top: 10px;
}

.btn-delete:hover {
  background: rgba(255, 107, 107, 0.3);
  border-color: #ff6b6b;
}

.empty-state {
  text-align: center;
  color: #bdbdbd;
  padding: 40px;
  grid-column: 1 / -1;
}

.login-cta {
  background: rgba(255, 215, 0, 0.08);
  border: 2px solid rgba(255, 215, 0, 0.3);
  border-radius: 12px;
  padding: 30px;
  text-align: center;
  margin-top: 30px;
}

.login-cta p {
  color: #bdbdbd;
  margin: 0 0 15px 0;
}

.btn-primary {
  background: linear-gradient(135deg, #ffd700, #ffed4e);
  color: #000;
  padding: 10px 25px;
  border-radius: 6px;
  font-weight: bold;
}

.btn-primary:hover {
  transform: scale(1.05);
}
</style>

</body></html>
