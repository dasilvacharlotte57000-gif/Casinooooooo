<%- include('partials/header') %>
<%- include('partials/nav') %>

<% const formatNotes = (text) => (text || "").replace(/\n/g, "<br>"); %>

<div class="container page-shell">
  <div class="page-toolbar">
    <input type="text" class="page-search-input" placeholder="Rechercher..." />
    <button class="page-search-btn" type="button">üîç</button>
  </div>
  <div class="page-header">
    <h1>üè¢ Partenariat Entreprise</h1>
    <p>Gestion des partenaires et entreprises associ√©es</p>
  </div>

  <!-- Formulaire d'ajout (uniquement connect√©) -->
  <% if (user) { %>
    <div class="card wide add-form">
      <h3>‚ûï Ajouter une entreprise</h3>
      <form method="post" action="/entreprises">
        <input name="nomEntreprise" placeholder="Nom de l'entreprise" required />
        <textarea name="notes" placeholder="Notes / D√©tails du partenariat"></textarea>
        <button class="btn btn-add" type="submit">Ajouter</button>
      </form>
    </div>
  <% } %>

  <!-- Liste des entreprises -->
  <div class="list-section">
    <div class="list-header">
      <h3>Partenariat Entreprise</h3>
      <span class="badge"><%= items.length %></span>
    </div>
    <div class="company-stack">
      <% if (items.length === 0) { %>
        <p class="empty-state">üì≠ Aucune entreprise partenaire enregistr√©e</p>
      <% } else { %>
        <% items.forEach(item => { %>
          <article class="company-card">
            <header class="company-card__head">
              <div>
                <h4><%= item.nomEntreprise %></h4>
                <p class="company-sub">Partenaire actif</p>
              </div>
              <% if (user) { %>
                <form method="post" action="/entreprises/<%= item._id %>/delete">
                  <button class="btn-delete" type="submit" title="Supprimer">üóëÔ∏è</button>
                </form>
              <% } %>
            </header>
            <div class="company-card__body">
              <% if (item.notes) { %>
                <div class="company-notes">
                  <span>üìù Notes</span>
                  <p><%- formatNotes(item.notes) %></p>
                </div>
              <% } else { %>
                <div class="company-notes empty">Aucune note pour le moment.</div>
              <% } %>
            </div>
          </article>
        <% }); %>
      <% } %>
    </div>
  </div>

</div>

<style>
.page-header {
  margin-bottom: 32px;
  text-align: center;
  border-bottom: 2px solid rgba(255, 215, 0, 0.18);
  padding-bottom: 18px;
}
.page-header h1 {
  margin: 0 0 10px 0;
  color: var(--accent);
  font-size: 38px;
  letter-spacing: 1px;
}
.page-header p {
  color: var(--muted);
  margin: 0;
}
.add-form {
  background: rgba(255, 215, 0, 0.10);
  border: 1px solid rgba(255, 215, 0, 0.22);
  margin-bottom: 32px;
  box-shadow: 0 4px 18px rgba(255,215,0,0.08);
}
.add-form h3 {
  color: var(--accent);
  margin-top: 0;
  font-size: 22px;
}
.btn-add {
  background: linear-gradient(135deg, var(--accent), var(--accent-strong));
  color: #000;
  font-weight: bold;
  padding: 13px 22px;
  border-radius: 10px;
  font-size: 16px;
  box-shadow: 0 2px 8px rgba(255,215,0,0.08);
}
.btn-add:hover {
  transform: scale(1.04);
  box-shadow: 0 6px 18px rgba(255,215,0,0.18);
}
.list-section {
  margin-top: 32px;
  padding: 20px;
  border-radius: 16px;
  background: rgba(0, 0, 0, 0.6);
  border: 1px solid rgba(255, 215, 0, 0.35);
  box-shadow: 0 0 24px rgba(255, 215, 0, 0.2);
}
.list-header {
  margin-bottom: 28px;
  padding-bottom: 14px;
  border-bottom: 1px solid rgba(255, 215, 0, 0.18);
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.list-header h3 {
  margin: 0;
  color: var(--accent);
  display: flex;
  align-items: center;
  gap: 10px;
  font-size: 20px;
}
.badge {
  background: rgba(255, 215, 0, 0.13);
  color: var(--accent);
  padding: 2px 10px;
  border-radius: 20px;
  font-size: 15px;
  font-weight: bold;
}
.company-stack {
  display: grid;
  gap: 14px;
}

.company-card {
  padding: 18px 20px;
  border-radius: 16px;
  border: 1px solid rgba(255, 215, 0, 0.35);
  background: rgba(0, 0, 0, 0.7);
  box-shadow: inset 0 0 14px rgba(255, 215, 0, 0.12);
}

.company-card__head {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12px;
  margin-bottom: 10px;
}

.company-card__head h4 {
  margin: 0;
  font-size: 19px;
  color: #e9eef3;
}

.company-sub {
  margin: 4px 0 0;
  color: rgba(255, 255, 255, 0.55);
  font-size: 12px;
  text-transform: uppercase;
  letter-spacing: 0.08em;
}

.company-card__body {
  border-top: 1px solid rgba(255, 215, 0, 0.18);
  padding-top: 12px;
}

.company-notes {
  color: var(--muted);
  font-size: 15px;
  line-height: 1.6;
}

.company-notes span {
  display: inline-block;
  margin-bottom: 6px;
  color: #ffd700;
  font-size: 12px;
  letter-spacing: 0.06em;
  text-transform: uppercase;
}

.company-notes.empty {
  color: rgba(255, 255, 255, 0.5);
  font-style: italic;
}

.btn-delete {
  background: rgba(255, 107, 107, 0.2);
  border: 1px solid rgba(255, 107, 107, 0.3);
  color: #ff6b6b;
  padding: 8px 12px;
  border-radius: 6px;
  cursor: pointer;
  transition: all 0.2s;
  font-size: 16px;
}

.btn-delete:hover {
  background: rgba(255, 107, 107, 0.3);
  border-color: #ff6b6b;
}
.empty-state {
  text-align: center;
  color: var(--muted);
  padding: 44px;
  grid-column: 1 / -1;
  font-size: 18px;
}
.login-cta {
  background: rgba(255, 215, 0, 0.10);
  border: 2px solid rgba(255, 215, 0, 0.22);
  border-radius: 14px;
  padding: 32px;
  text-align: center;
  margin-top: 32px;
  box-shadow: 0 2px 12px rgba(255,215,0,0.07);
}
.login-cta p {
  color: var(--muted);
  margin: 0 0 15px 0;
  font-size: 16px;
}
.btn-primary {
  background: linear-gradient(135deg, var(--accent), var(--accent-strong));
  color: #000;
  padding: 12px 28px;
  border-radius: 10px;
  font-weight: bold;
  font-size: 16px;
}
.btn-primary:hover {
  transform: scale(1.05);
}
</style>

<%- include('partials/footer') %>

</body></html>

<script>
// Toggle actions (supprimer) when clicking on a company card
document.addEventListener('click', function (e) {
  const card = e.target.closest('.company-card');
  if (!card) return;
  if (e.target.closest('form') || e.target.closest('button') || e.target.tagName === 'A' || e.target.tagName === 'INPUT') return;
  card.classList.toggle('show-actions');
});
</script>

