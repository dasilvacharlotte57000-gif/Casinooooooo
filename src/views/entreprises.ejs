<%- include('partials/header') %>
<%- include('partials/nav') %>

<div class="container">
  <div class="page-header">
    <h1>üè¢ Partenaires Entreprises</h1>
    <p>Gestion des partenaires et entreprises associ√©es</p>
  </div>

  <!-- Formulaire d'ajout (uniquement connect√©) -->
  <% if (user) { %>
    <div class="card wide add-form">
      <h3>‚ûï Ajouter une entreprise</h3>
      <form method="post" action="/entreprises">
        <input name="nomEntreprise" placeholder="Nom de l'entreprise" required />
        <div class="row">
          <input name="contactNom" placeholder="Nom du contact" />
          <input name="contactEmail" placeholder="Email du contact" />
        </div>
        <input name="notes" placeholder="Notes / D√©tails du partenariat" />
        <button class="btn btn-add" type="submit">Ajouter</button>
      </form>
    </div>
  <% } %>

  <!-- Liste des entreprises -->
  <div class="list-section">
    <div class="list-header">
      <h3>Partenaires Entreprises (<span class="badge"><%= items.length %></span>)</h3>
    </div>
    <div class="list company-grid">
      <% if (items.length === 0) { %>
        <p class="empty-state">üì≠ Aucune entreprise partenaire enregistr√©e</p>
      <% } else { %>
        <% items.forEach(item => { %>
          <div class="company-card">
            <div class="card-header">
              <h4><%= item.nomEntreprise %></h4>
            </div>
            <div class="card-content">
              <% if (item.contactNom || item.contactEmail) { %>
                <p class="info-item">
                  üë§ <strong><%= item.contactNom || 'Contact' %></strong>
                </p>
              <% } %>
              <% if (item.contactEmail) { %>
                <p class="info-item">
                  üìß <a href="mailto:<%= item.contactEmail %>" style="color: #ffd700; text-decoration: underline;">
                    <%= item.contactEmail %>
                  </a>
                </p>
              <% } %>
              <% if (item.notes) { %>
                <p class="info-item notes">
                  üìù <%= item.notes %>
                </p>
              <% } %>
              <% if (user) { %>
                <form method="post" action="/entreprises/<%= item._id %>/delete" class="delete-btn-container">
                  <button class="btn-delete" type="submit">üóëÔ∏è Supprimer</button>
                </form>
              <% } %>
            </div>
          </div>
        <% }); %>
      <% } %>
    </div>
  </div>

  <!-- Message pour utilisateurs d√©connect√©s -->
  <% if (!user) { %>
    <div class="login-cta">
      <p>‚ú® Connectez-vous pour g√©rer les partenaires entreprises</p>
      <a href="/login" class="btn btn-primary">Se connecter</a>
    </div>
  <% } %>
</div>

<style>
.page-header {
  margin-bottom: 30px;
  text-align: center;
  border-bottom: 2px solid rgba(255, 215, 0, 0.2);
  padding-bottom: 20px;
}

.page-header h1 {
  margin: 0 0 10px 0;
  color: #ffd700;
  font-size: 36px;
}

.page-header p {
  color: #bdbdbd;
  margin: 0;
}

.add-form {
  background: rgba(255, 215, 0, 0.08);
  border: 1px solid rgba(255, 215, 0, 0.25);
  margin-bottom: 30px;
}

.add-form h3 {
  color: #ffd700;
  margin-top: 0;
}

.btn-add {
  background: linear-gradient(135deg, #ffd700, #ffed4e);
  color: #000;
  font-weight: bold;
  padding: 12px 20px;
}

.btn-add:hover {
  transform: scale(1.02);
}

.list-section {
  margin-top: 30px;
}

.list-header {
  margin-bottom: 25px;
  padding-bottom: 15px;
  border-bottom: 1px solid rgba(255, 215, 0, 0.2);
}

.list-header h3 {
  margin: 0;
  color: #ffd700;
  display: flex;
  align-items: center;
  gap: 10px;
}

.badge {
  background: rgba(255, 215, 0, 0.2);
  color: #ffd700;
  padding: 2px 8px;
  border-radius: 20px;
  font-size: 14px;
  font-weight: bold;
}

.company-grid {
  display: grid !important;
  grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
  gap: 20px;
  flex-direction: initial !important;
  align-items: start;
}

.company-card {
  background: rgba(255, 215, 0, 0.05);
  border: 1px solid rgba(255, 215, 0, 0.15);
  border-radius: 12px;
  overflow: hidden;
  transition: all 0.3s ease;
  display: flex;
  flex-direction: column;
  height: 100%;
}

.company-card:hover {
  background: rgba(255, 215, 0, 0.08);
  border-color: rgba(255, 215, 0, 0.3);
  transform: translateY(-5px);
  box-shadow: 0 5px 20px rgba(255, 215, 0, 0.1);
}

.card-header {
  background: rgba(255, 215, 0, 0.1);
  border-bottom: 1px solid rgba(255, 215, 0, 0.2);
  padding: 16px;
}

.card-header h4 {
  margin: 0;
  color: #ffd700;
  font-size: 18px;
}

.card-content {
  padding: 16px;
  flex: 1;
  display: flex;
  flex-direction: column;
}

.info-item {
  margin: 8px 0;
  color: #bdbdbd;
  font-size: 14px;
  line-height: 1.5;
}

.info-item.notes {
  font-style: italic;
  border-top: 1px solid rgba(255, 215, 0, 0.1);
  padding-top: 8px;
  margin-top: 10px;
  color: #999;
}

.delete-btn-container {
  margin-top: auto;
}

.btn-delete {
  width: 100%;
  background: rgba(255, 107, 107, 0.2);
  border: 1px solid rgba(255, 107, 107, 0.3);
  color: #ff6b6b;
  padding: 8px;
  border-radius: 6px;
  cursor: pointer;
  transition: all 0.2s;
  margin-top: 10px;
  font-size: 14px;
}

.btn-delete:hover {
  background: rgba(255, 107, 107, 0.3);
  border-color: #ff6b6b;
}

.empty-state {
  text-align: center;
  color: #bdbdbd;
  padding: 40px;
  grid-column: 1 / -1;
}

.login-cta {
  background: rgba(255, 215, 0, 0.08);
  border: 2px solid rgba(255, 215, 0, 0.3);
  border-radius: 12px;
  padding: 30px;
  text-align: center;
  margin-top: 30px;
}

.login-cta p {
  color: #bdbdbd;
  margin: 0 0 15px 0;
}

.btn-primary {
  background: linear-gradient(135deg, #ffd700, #ffed4e);
  color: #000;
  padding: 10px 25px;
  border-radius: 6px;
  font-weight: bold;
}

.btn-primary:hover {
  transform: scale(1.05);
}
</style>

</body></html>
