<%- include('partials/header') %>
<%- include('partials/nav') %>

<% const formatNotes = (text) => (text || "").replace(/\n/g, "<br>"); %>

<div class="container page-shell">
  <div class="page-toolbar">
    <input type="text" class="page-search-input" placeholder="Rechercher..." />
    <button class="page-search-btn" type="button">üîç</button>
  </div>
  <div class="page-header">
    <h1>üè¢ Partenariat Entreprise</h1>
    <p>Gestion des partenaires et entreprises associ√©es</p>
  </div>

  <!-- Formulaire d'ajout (uniquement connect√©) -->
  <% if (user) { %>
    <div class="card wide add-form">
      <h3>‚ûï Ajouter une entreprise</h3>
      <form method="post" action="/entreprises">
        <input name="nomEntreprise" placeholder="Nom de l'entreprise" required />
        <textarea name="notes" placeholder="Notes / D√©tails du partenariat"></textarea>
        <button class="btn btn-add" type="submit">Ajouter</button>
      </form>
    </div>
  <% } %>

  <!-- Liste des entreprises -->
  <div class="list-section">
    <div class="list-header">
      <h3>Partenariat Entreprise (<span class="badge"><%= items.length %></span>)</h3>
    </div>
    <div class="list company-grid">
      <% if (items.length === 0) { %>
        <p class="empty-state">üì≠ Aucune entreprise partenaire enregistr√©e</p>
      <% } else { %>
        <% items.forEach(item => { %>
          <div class="company-card">
            <div class="card-header">
              <h4><%= item.nomEntreprise %></h4>
            </div>
            <div class="card-content">
              <% if (item.notes) { %>
                <p class="info-item notes">
                  üìù <%- formatNotes(item.notes) %>
                </p>
              <% } %>
              <% if (user) { %>
                <form method="post" action="/entreprises/<%= item._id %>/delete" class="delete-btn-container">
                  <button class="btn-delete" type="submit">üóëÔ∏è Supprimer</button>
                </form>
              <% } %>
            </div>
          </div>
        <% }); %>
      <% } %>
    </div>
  </div>

</div>

<style>
.page-header {
  margin-bottom: 32px;
  text-align: center;
  border-bottom: 2px solid rgba(255, 215, 0, 0.18);
  padding-bottom: 18px;
}
.page-header h1 {
  margin: 0 0 10px 0;
  color: var(--accent);
  font-size: 38px;
  letter-spacing: 1px;
}
.page-header p {
  color: var(--muted);
  margin: 0;
}
.add-form {
  background: rgba(255, 215, 0, 0.10);
  border: 1px solid rgba(255, 215, 0, 0.22);
  margin-bottom: 32px;
  box-shadow: 0 4px 18px rgba(255,215,0,0.08);
}
.add-form h3 {
  color: var(--accent);
  margin-top: 0;
  font-size: 22px;
}
.btn-add {
  background: linear-gradient(135deg, var(--accent), var(--accent-strong));
  color: #000;
  font-weight: bold;
  padding: 13px 22px;
  border-radius: 10px;
  font-size: 16px;
  box-shadow: 0 2px 8px rgba(255,215,0,0.08);
}
.btn-add:hover {
  transform: scale(1.04);
  box-shadow: 0 6px 18px rgba(255,215,0,0.18);
}
.list-section {
  margin-top: 32px;
}
.list-header {
  margin-bottom: 28px;
  padding-bottom: 14px;
  border-bottom: 1px solid rgba(255, 215, 0, 0.18);
}
.list-header h3 {
  margin: 0;
  color: var(--accent);
  display: flex;
  align-items: center;
  gap: 10px;
  font-size: 20px;
}
.badge {
  background: rgba(255, 215, 0, 0.13);
  color: var(--accent);
  padding: 2px 10px;
  border-radius: 20px;
  font-size: 15px;
  font-weight: bold;
}
.company-grid {
  display: grid !important;
  grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
  gap: 24px;
  align-items: start;
}
.company-card {
  background: rgba(255, 215, 0, 0.07);
  border: 1px solid rgba(255, 215, 0, 0.13);
  border-radius: 16px;
  overflow: hidden;
  transition: all 0.3s ease;
  display: flex;
  flex-direction: column;
  height: 100%;
  box-shadow: 0 2px 12px rgba(255,215,0,0.07);
}
.company-card:hover {
  background: rgba(255, 215, 0, 0.13);
  border-color: rgba(255, 215, 0, 0.22);
  transform: translateY(-6px);
  box-shadow: 0 10px 30px rgba(255,215,0,0.13);
}
.card-header {
  background: rgba(255, 215, 0, 0.13);
  border-bottom: 1px solid rgba(255, 215, 0, 0.18);
  padding: 18px;
}
.card-header h4 {
  margin: 0;
  color: var(--accent);
  font-size: 20px;
}
.card-content {
  padding: 18px;
  flex: 1;
  display: flex;
  flex-direction: column;
}
.info-item {
  margin: 10px 0;
  color: var(--muted);
  font-size: 15px;
  line-height: 1.5;
}
.info-item.notes {
  font-style: italic;
  border-top: 1px solid rgba(255, 215, 0, 0.13);
  padding-top: 8px;
  margin-top: 10px;
  color: #999;
}
.delete-btn-container {
  margin-top: auto;
  max-height: 0;
  overflow: hidden;
  opacity: 0;
  transition: max-height 0.25s ease, opacity 0.25s ease;
}
.company-card.show-actions .delete-btn-container {
  max-height: 80px;
  opacity: 1;
}
.btn-delete {
  width: 100%;
  background: rgba(255, 107, 107, 0.18);
  border: 1px solid rgba(255, 107, 107, 0.22);
  color: var(--danger);
  padding: 10px;
  border-radius: 10px;
  cursor: pointer;
  transition: background 0.2s, border-color 0.2s;
  margin-top: 12px;
  font-size: 15px;
}
.btn-delete:hover {
  background: rgba(255, 107, 107, 0.28);
  border-color: #ff6b6b;
}
.empty-state {
  text-align: center;
  color: var(--muted);
  padding: 44px;
  grid-column: 1 / -1;
  font-size: 18px;
}
.login-cta {
  background: rgba(255, 215, 0, 0.10);
  border: 2px solid rgba(255, 215, 0, 0.22);
  border-radius: 14px;
  padding: 32px;
  text-align: center;
  margin-top: 32px;
  box-shadow: 0 2px 12px rgba(255,215,0,0.07);
}
.login-cta p {
  color: var(--muted);
  margin: 0 0 15px 0;
  font-size: 16px;
}
.btn-primary {
  background: linear-gradient(135deg, var(--accent), var(--accent-strong));
  color: #000;
  padding: 12px 28px;
  border-radius: 10px;
  font-weight: bold;
  font-size: 16px;
}
.btn-primary:hover {
  transform: scale(1.05);
}
</style>

<%- include('partials/footer') %>

</body></html>

<script>
// Toggle actions (supprimer) when clicking on a company card
document.addEventListener('click', function (e) {
  const card = e.target.closest('.company-card');
  if (!card) return;
  if (e.target.closest('form') || e.target.closest('button') || e.target.tagName === 'A' || e.target.tagName === 'INPUT') return;
  card.classList.toggle('show-actions');
});
</script>

