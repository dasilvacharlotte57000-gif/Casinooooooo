<%- include('partials/header') %>
<%- include('partials/nav') %>

<% const formatNotes = (text) => (text || "").replace(/\n/g, "<br>"); %>
<% const getInitials = (name) => name.split(' ').map(w => w[0]).slice(0, 2).join('').toUpperCase(); %>

<div class="entreprises-page">
  <!-- Hero Section -->
  <div class="entreprises-hero">
    <div class="hero-glow"></div>
    <div class="hero-content">
      <div class="hero-badge">
        <span class="diamond-icon">‚óÜ</span>
        <span class="badge-text">Partenariats Entreprise</span>
        <span class="diamond-icon">‚óÜ</span>
      </div>
      <h1 class="hero-title">
        <span class="title-line">R√©seau</span>
        <span class="title-line title-accent">Diamant</span>
      </h1>
      <p class="hero-description">
        Gestion centralis√©e des partenaires corporatifs et collaborations d'excellence
      </p>
      
      <!-- Stats Cards -->
      <div class="hero-stats">
        <div class="stat-card">
          <div class="stat-icon">üíé</div>
          <div class="stat-content">
            <span class="stat-label">Total Entreprises</span>
            <span class="stat-value"><%= items.length %></span>
          </div>
        </div>
        <div class="stat-card">
          <div class="stat-icon">‚úì</div>
          <div class="stat-content">
            <span class="stat-label">Partenariats Actifs</span>
            <span class="stat-value"><%= items.length %></span>
          </div>
        </div>
        <div class="stat-card">
          <div class="stat-icon">üìã</div>
          <div class="stat-content">
            <span class="stat-label">Avec D√©tails</span>
            <span class="stat-value"><%= items.filter(i => i.notes).length %></span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="entreprises-container">
    
    <!-- Search Bar -->
    <div class="search-section">
      <div class="search-wrapper">
        <svg class="search-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="11" cy="11" r="8"></circle>
          <path d="m21 21-4.35-4.35"></path>
        </svg>
        <input type="text" id="searchInput" class="search-input" placeholder="Rechercher une entreprise..." />
      </div>
    </div>

    <!-- Add Form (Only if authenticated) -->
    <% if (user) { %>
      <div class="add-section">
        <div class="add-card">
          <div class="add-header">
            <div class="add-icon">
              <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M12 5v14M5 12h14"></path>
              </svg>
            </div>
            <div>
              <h3 class="add-title">Nouvelle Entreprise</h3>
              <p class="add-subtitle">Ajouter un partenaire corporatif</p>
            </div>
          </div>
          <form method="post" action="/entreprises" class="add-form">
            <% if (authToken) { %>
              <input type="hidden" name="token" value="<%= authToken %>" />
            <% } %>
            <div class="form-group">
              <label class="form-label">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <rect x="2" y="7" width="20" height="14" rx="2" ry="2"></rect>
                  <path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"></path>
                </svg>
                Nom de l'entreprise
              </label>
              <input 
                name="nomEntreprise" 
                class="form-input" 
                placeholder="Ex: Diamond Corp, Elite Solutions..." 
                required 
              />
            </div>
            <div class="form-group">
              <label class="form-label">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                  <polyline points="14 2 14 8 20 8"></polyline>
                  <line x1="16" y1="13" x2="8" y2="13"></line>
                  <line x1="16" y1="17" x2="8" y2="17"></line>
                  <polyline points="10 9 9 9 8 9"></polyline>
                </svg>
                Notes & D√©tails du partenariat
              </label>
              <textarea 
                name="notes" 
                class="form-textarea" 
                rows="4"
                placeholder="Services offerts, contacts cl√©s, conditions, avantages, notes importantes..."
              ></textarea>
            </div>
            <button class="form-submit" type="submit">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M19 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11l5 5v11a2 2 0 0 1-2 2z"></path>
                <polyline points="17 21 17 13 7 13 7 21"></polyline>
                <polyline points="7 3 7 8 15 8"></polyline>
              </svg>
              <span>Enregistrer l'entreprise</span>
            </button>
          </form>
        </div>
      </div>
    <% } %>

    <!-- Companies Grid -->
    <div class="entreprises-section">
      <div class="section-header">
        <h2 class="section-title">Toutes les entreprises</h2>
        <span class="entreprises-count"><%= items.length %> partenaire<%= items.length > 1 ? 's' : '' %></span>
      </div>

      <% if (items.length === 0) { %>
        <div class="empty-state-modern">
          <div class="empty-icon">üè¢</div>
          <h3>Aucune entreprise enregistr√©e</h3>
          <p>Commencez par ajouter votre premi√®re entreprise partenaire</p>
          <% if (!user) { %>
            <a href="/login" class="empty-cta">Se connecter pour ajouter</a>
          <% } %>
        </div>
      <% } else { %>
        <div class="entreprises-grid" id="entreprisesContainer">
          <% items.forEach((item, index) => { %>
            <article class="company-card" data-name="<%= (item.nomEntreprise || '').toLowerCase() %>">
              <div class="card-shine"></div>
              
              <div class="company-header">
                <div class="company-avatar">
                  <span class="avatar-text"><%= getInitials(item.nomEntreprise || 'XX') %></span>
                  <div class="avatar-glow"></div>
                </div>
                <div class="company-info">
                  <h3 class="company-name"><%= item.nomEntreprise || 'Entreprise' %></h3>
                  <span class="company-status">
                    <span class="status-dot"></span>
                    Partenaire Premium
                  </span>
                </div>
              </div>

              <div class="company-body">
                <% if (item.notes) { %>
                  <div class="company-description">
                    <div class="description-header">
                      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                        <polyline points="14 2 14 8 20 8"></polyline>
                        <line x1="16" y1="13" x2="8" y2="13"></line>
                        <line x1="16" y1="17" x2="8" y2="17"></line>
                      </svg>
                      <span>D√©tails du partenariat</span>
                    </div>
                    <p class="description-text"><%- formatNotes(item.notes) %></p>
                  </div>
                <% } else { %>
                  <div class="company-empty">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <circle cx="12" cy="12" r="10"></circle>
                      <line x1="12" y1="16" x2="12" y2="12"></line>
                      <line x1="12" y1="8" x2="12.01" y2="8"></line>
                    </svg>
                    <span>Aucun d√©tail enregistr√©</span>
                  </div>
                <% } %>
              </div>

              <% if (user) { %>
                <div class="company-footer">
                  <div class="company-meta">
                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <circle cx="12" cy="12" r="10"></circle>
                      <polyline points="12 6 12 12 16 14"></polyline>
                    </svg>
                    <span>Ajout√© le <%= item.createdAt ? new Date(item.createdAt).toLocaleDateString('fr-FR') : 'N/A' %></span>
                  </div>
                  <form method="post" action="/entreprises/<%= item._id %>/delete" class="delete-action">
                    <% if (authToken) { %>
                      <input type="hidden" name="token" value="<%= authToken %>" />
                    <% } %>
                    <button class="delete-btn" type="submit" onclick="return confirm('Supprimer ce partenaire ?')">
                      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <polyline points="3 6 5 6 21 6"></polyline>
                        <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                        <line x1="10" y1="11" x2="10" y2="17"></line>
                        <line x1="14" y1="11" x2="14" y2="17"></line>
                      </svg>
                      <span>Supprimer</span>
                    </button>
                  </form>
                </div>
              <% } %>
            </article>
          <% }); %>
        </div>
      <% } %>
    </div>

  </div>
</div>

<style>
  /* ===== BASE STYLES ===== */
  .entreprises-page {
    min-height: 100vh;
    padding-bottom: 80px;
    background: linear-gradient(180deg, #050510 0%, #020208 50%, #050510 100%);
  }

  /* ===== HERO SECTION ===== */
  .entreprises-hero {
    position: relative;
    padding: 100px 20px 80px;
    text-align: center;
    overflow: hidden;
  }

  .hero-glow {
    position: absolute;
    top: -200px;
    left: 50%;
    transform: translateX(-50%);
    width: 700px;
    height: 700px;
    background: radial-gradient(circle, rgba(59,130,246,0.2) 0%, transparent 70%);
    pointer-events: none;
    animation: pulse 4s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% { transform: translateX(-50%) scale(1); opacity: 0.5; }
    50% { transform: translateX(-50%) scale(1.1); opacity: 0.8; }
  }

  .hero-content {
    position: relative;
    z-index: 2;
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 12px;
    padding: 10px 24px;
    background: linear-gradient(135deg, rgba(59,130,246,0.2), rgba(59,130,246,0.05));
    border: 1px solid rgba(59,130,246,0.4);
    border-radius: 50px;
    margin-bottom: 30px;
    backdrop-filter: blur(10px);
    animation: fadeInDown 0.8s ease-out;
    box-shadow: 0 0 30px rgba(59,130,246,0.3);
  }

  .diamond-icon {
    color: #3b82f6;
    font-size: 12px;
    animation: rotate 3s linear infinite;
    text-shadow: 0 0 10px rgba(59,130,246,0.8);
  }

  @keyframes rotate {
    0%, 100% { transform: rotate(0deg); }
    50% { transform: rotate(180deg); }
  }

  .badge-text {
    color: #3b82f6;
    font-size: 13px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 2px;
    text-shadow: 0 0 10px rgba(59,130,246,0.5);
  }

  .hero-title {
    margin: 0 0 30px 0;
    display: flex;
    flex-direction: column;
    gap: 5px;
    animation: fadeInUp 1s ease-out;
  }

  .title-line {
    font-size: 52px;
    font-weight: 800;
    background: linear-gradient(135deg, #fff 0%, #e0e0e0 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    line-height: 1.1;
  }

  .title-accent {
    background: linear-gradient(135deg, #3b82f6 0%, #60a5fa 50%, #93c5fd 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: shimmer 3s ease-in-out infinite;
    text-shadow: 0 0 60px rgba(59,130,246,0.6);
  }

  @keyframes shimmer {
    0%, 100% { filter: brightness(1); }
    50% { filter: brightness(1.4); }
  }

  .hero-description {
    font-size: 18px;
    color: var(--muted);
    margin: 0 auto 50px;
    max-width: 600px;
    line-height: 1.6;
    animation: fadeIn 1.2s ease-out;
  }

  @keyframes fadeInDown {
    from { opacity: 0; transform: translateY(-30px); }
    to { opacity: 1; transform: translateY(0); }
  }

  @keyframes fadeInUp {
    from { opacity: 0; transform: translateY(30px); }
    to { opacity: 1; transform: translateY(0); }
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  /* ===== STATS CARDS ===== */
  .hero-stats {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 20px;
    max-width: 800px;
    margin: 0 auto;
    animation: fadeIn 1.4s ease-out;
  }

  .stat-card {
    display: flex;
    align-items: center;
    gap: 15px;
    padding: 20px 25px;
    background: linear-gradient(135deg, rgba(59,130,246,0.08), rgba(59,130,246,0.02));
    border: 1px solid rgba(59,130,246,0.3);
    border-radius: 16px;
    transition: all 0.3s ease;
    box-shadow: 0 4px 20px rgba(59,130,246,0.1);
  }

  .stat-card:hover {
    transform: translateY(-5px);
    border-color: rgba(59,130,246,0.5);
    box-shadow: 0 10px 30px rgba(59,130,246,0.3);
  }

  .stat-icon {
    font-size: 32px;
    filter: drop-shadow(0 0 10px rgba(59,130,246,0.5));
  }

  .stat-content {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }

  .stat-label {
    font-size: 12px;
    color: var(--muted);
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 4px;
  }

  .stat-value {
    font-size: 28px;
    font-weight: 800;
    color: #3b82f6;
    text-shadow: 0 0 20px rgba(59,130,246,0.5);
  }

  /* ===== CONTAINER ===== */
  .entreprises-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  /* ===== SEARCH SECTION ===== */
  .search-section {
    margin-bottom: 40px;
  }

  .search-wrapper {
    position: relative;
    max-width: 600px;
    margin: 0 auto;
  }

  .search-icon {
    position: absolute;
    left: 20px;
    top: 50%;
    transform: translateY(-50%);
    color: #3b82f6;
    pointer-events: none;
  }

  .search-input {
    width: 100%;
    padding: 16px 20px 16px 50px;
    background: rgba(59,130,246,0.03);
    border: 1px solid rgba(59,130,246,0.3);
    border-radius: 50px;
    color: #e9eef3;
    font-size: 15px;
    outline: none;
    transition: all 0.3s ease;
    box-sizing: border-box;
  }

  .search-input:focus {
    border-color: #3b82f6;
    box-shadow: 0 0 0 3px rgba(59,130,246,0.15);
    background: rgba(59,130,246,0.05);
  }

  .search-input::placeholder {
    color: rgba(255,255,255,0.3);
  }

  /* ===== ADD SECTION ===== */
  .add-section {
    margin-bottom: 50px;
  }

  .add-card {
    background: linear-gradient(135deg, rgba(59,130,246,0.12), rgba(59,130,246,0.03));
    border: 1px solid rgba(59,130,246,0.3);
    border-radius: 20px;
    padding: 35px;
    box-shadow: 0 10px 40px rgba(59,130,246,0.15);
  }

  .add-header {
    display: flex;
    align-items: center;
    gap: 20px;
    margin-bottom: 30px;
  }

  .add-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 60px;
    height: 60px;
    background: linear-gradient(135deg, rgba(59,130,246,0.3), rgba(59,130,246,0.1));
    border: 2px solid rgba(59,130,246,0.4);
    border-radius: 16px;
    color: #3b82f6;
    flex-shrink: 0;
    box-shadow: 0 0 30px rgba(59,130,246,0.3);
  }

  .add-title {
    font-size: 24px;
    font-weight: 700;
    margin: 0 0 5px 0;
    color: #fff;
  }

  .add-subtitle {
    font-size: 14px;
    color: var(--muted);
    margin: 0;
  }

  /* ===== FORM STYLES ===== */
  .add-form, .form-group {
    display: flex;
    flex-direction: column;
  }

  .form-group {
    margin-bottom: 20px;
  }

  .form-label {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 13px;
    font-weight: 600;
    color: #3b82f6;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 10px;
  }

  .form-label svg {
    color: #3b82f6;
  }

  .form-input,
  .form-textarea {
    padding: 14px 18px;
    background: rgba(59,130,246,0.03);
    border: 1px solid rgba(59,130,246,0.2);
    border-radius: 12px;
    color: #e9eef3;
    font-size: 15px;
    font-family: inherit;
    outline: none;
    transition: all 0.3s ease;
  }

  .form-input:focus,
  .form-textarea:focus {
    border-color: #3b82f6;
    box-shadow: 0 0 0 3px rgba(59,130,246,0.15);
    background: rgba(59,130,246,0.05);
  }

  .form-textarea {
    resize: vertical;
    min-height: 120px;
    line-height: 1.6;
  }

  .form-submit {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    padding: 16px 32px;
    background: linear-gradient(135deg, #3b82f6, #60a5fa);
    border: none;
    border-radius: 12px;
    color: #000;
    font-size: 16px;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.3s ease;
    margin-top: 10px;
    box-shadow: 0 4px 20px rgba(59,130,246,0.3);
  }

  .form-submit:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(59,130,246,0.4);
  }

  .form-submit:active {
    transform: translateY(0);
  }

  /* ===== COMPANIES SECTION ===== */
  .entreprises-section {
    margin-top: 30px;
  }

  .section-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 30px;
    padding-bottom: 15px;
    border-bottom: 1px solid rgba(59,130,246,0.3);
  }

  .section-title {
    font-size: 28px;
    font-weight: 700;
    margin: 0;
    color: #fff;
  }

  .entreprises-count {
    padding: 6px 16px;
    background: rgba(59,130,246,0.2);
    border: 1px solid rgba(59,130,246,0.4);
    border-radius: 20px;
    color: #3b82f6;
    font-size: 14px;
    font-weight: 600;
    box-shadow: 0 0 20px rgba(59,130,246,0.2);
  }

  /* ===== COMPANIES GRID ===== */
  .entreprises-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 25px;
  }

  .company-card {
    position: relative;
    background: linear-gradient(145deg, rgba(59,130,246,0.05), rgba(59,130,246,0.01));
    border: 1px solid rgba(59,130,246,0.25);
    border-radius: 20px;
    padding: 25px;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    animation: slideInUp 0.6s ease-out both;
  }

  @keyframes slideInUp {
    from { opacity: 0; transform: translateY(30px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .company-card:hover {
    transform: translateY(-8px);
    border-color: rgba(59,130,246,0.5);
    box-shadow: 0 20px 50px rgba(59,130,246,0.3);
  }

  .card-shine {
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: linear-gradient(45deg, transparent 30%, rgba(59,130,246,0.1) 50%, transparent 70%);
    transform: rotate(45deg);
    animation: shine 6s ease-in-out infinite;
  }

  @keyframes shine {
    0%, 100% { transform: translateX(-100%) translateY(-100%) rotate(45deg); }
    50% { transform: translateX(100%) translateY(100%) rotate(45deg); }
  }

  /* ===== COMPANY HEADER ===== */
  .company-header {
    display: flex;
    align-items: center;
    gap: 15px;
    margin-bottom: 20px;
    position: relative;
    z-index: 1;
  }

  .company-avatar {
    position: relative;
    width: 60px;
    height: 60px;
    background: linear-gradient(135deg, rgba(59,130,246,0.3), rgba(59,130,246,0.1));
    border: 2px solid rgba(59,130,246,0.4);
    border-radius: 14px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    box-shadow: 0 0 30px rgba(59,130,246,0.3);
  }

  .avatar-text {
    font-size: 20px;
    font-weight: 700;
    color: #3b82f6;
    z-index: 2;
    position: relative;
    text-shadow: 0 0 10px rgba(59,130,246,0.5);
  }

  .avatar-glow {
    position: absolute;
    inset: -5px;
    background: radial-gradient(circle, rgba(59,130,246,0.4) 0%, transparent 70%);
    border-radius: 14px;
    animation: pulse-glow 2s ease-in-out infinite;
  }

  @keyframes pulse-glow {
    0%, 100% { opacity: 0.5; transform: scale(1); }
    50% { opacity: 1; transform: scale(1.1); }
  }

  .company-info {
    flex: 1;
  }

  .company-name {
    font-size: 20px;
    font-weight: 700;
    margin: 0 0 5px 0;
    color: #fff;
  }

  .company-status {
    display: flex;
    align-items: center;
    gap: 6px;
    font-size: 12px;
    color: var(--muted);
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .status-dot {
    width: 8px;
    height: 8px;
    background: linear-gradient(135deg, #3b82f6, #60a5fa);
    border-radius: 50%;
    animation: pulse-dot 2s ease-in-out infinite;
    box-shadow: 0 0 10px rgba(59,130,246,0.8);
  }

  @keyframes pulse-dot {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }

  /* ===== COMPANY BODY ===== */
  .company-body {
    position: relative;
    z-index: 1;
    margin-bottom: 15px;
  }

  .company-description {
    padding: 15px;
